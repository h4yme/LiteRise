<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft pastel gradient background -->

    <item>

        <shape android:shape="rectangle">

            <gradient

                android:angle="135"

                android:startColor="#FFF8F0"

                android:centerColor="#FFF5E8"

                android:endColor="#E8F4F8"

                android:type="linear" />

        </shape>

    </item>



    <!-- Subtle overlay for depth -->

    <item>

        <shape android:shape="rectangle">

            <gradient

                android:angle="45"

                android:startColor="#10FFD89B"

                android:endColor="#10A8D8E8"

                android:type="linear" />

        </shape>

    </item>

</layer-list>