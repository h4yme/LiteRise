<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <!-- Base gradient background -->

    <item>

        <shape android:shape="rectangle">

            <gradient

                android:angle="135"

                android:startColor="#FFE56D"

                android:centerColor="#FFCF5C"

                android:endColor="#FDB44B"

                android:type="linear" />

        </shape>

    </item>



    <!-- Sunburst rays - Layer 1 -->

    <item>

        <rotate

            android:fromDegrees="0"

            android:pivotX="50%"

            android:pivotY="50%">

            <shape android:shape="rectangle">

                <gradient

                    android:angle="0"

                    android:centerColor="#00FFFFFF"

                    android:endColor="#4DFFFFFF"

                    android:startColor="#4DFFFFFF"

                    android:type="sweep" />

            </shape>

        </rotate>

    </item>



    <!-- Sunburst rays - Layer 2 (rotated) -->

    <item>

        <rotate

            android:fromDegrees="15"

            android:pivotX="50%"

            android:pivotY="50%">

            <shape android:shape="rectangle">

                <gradient

                    android:angle="0"

                    android:centerColor="#00FFFFFF"

                    android:endColor="#33FFFFFF"

                    android:startColor="#33FFFFFF"

                    android:type="sweep" />

            </shape>

        </rotate>

    </item>



    <!-- Sunburst rays - Layer 3 (rotated more) -->

    <item>

        <rotate

            android:fromDegrees="30"

            android:pivotX="50%"

            android:pivotY="50%">

            <shape android:shape="rectangle">

                <gradient

                    android:angle="0"

                    android:centerColor="#00FFFFFF"

                    android:endColor="#26FFFFFF"

                    android:startColor="#26FFFFFF"
                    android:type="sweep" />

            </shape>

        </rotate>

    </item>



    <!-- Center bright glow -->

    <item

        android:bottom="140dp"

        android:left="140dp"

        android:right="140dp"

        android:top="140dp">

        <shape android:shape="oval">

            <gradient

                android:centerColor="#FFFEF8"

                android:endColor="#00FFFFFF"

                android:gradientRadius="200"

                android:type="radial" />

        </shape>

    </item>



</layer-list>