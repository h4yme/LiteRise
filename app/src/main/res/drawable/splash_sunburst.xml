<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#FFE56D"
                android:centerColor="#FFCF5C"
                android:endColor="#FDB44B"
                android:type="linear" />
        </shape>
    </item>

    <!-- Sunburst rays overlay -->
    <item>
        <rotate
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <gradient
                    android:angle="0"
                    android:centerColor="#00FFFFFF"
                    android:endColor="#1AFFFFFF"
                    android:startColor="#1AFFFFFF"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>

    <!-- Center bright glow -->
    <item
        android:bottom="40%"
        android:left="40%"
        android:right="40%"
        android:top="40%">
        <shape android:shape="oval">
            <gradient
                android:centerColor="#FFFEF8"
                android:endColor="#00FFFFFF"
                android:gradientRadius="200"
                android:type="radial" />
        </shape>
    </item>

</layer-list>
