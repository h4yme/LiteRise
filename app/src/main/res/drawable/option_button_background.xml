<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state -->

    <item android:state_selected="true">

        <shape android:shape="rectangle">

            <solid android:color="@color/color_jade1"/>

            <corners android:radius="12dp"/>

            <stroke android:width="2dp" android:color="@color/color_jade2"/>

        </shape>

    </item>



    <!-- Pressed state -->

    <item android:state_pressed="true">

        <shape android:shape="rectangle">

            <solid android:color="@color/gray_light"/>

            <corners android:radius="12dp"/>

            <stroke android:width="2dp" android:color="@color/color_jade1"/>

        </shape>

    </item>



    <!-- Default state -->

    <item>

        <shape android:shape="rectangle">

            <solid android:color="@color/white"/>

            <corners android:radius="12dp"/>

            <stroke android:width="1dp" android:color="@color/border_gray"/>

        </shape>

    </item>

</selector>