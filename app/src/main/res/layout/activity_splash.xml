<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="@drawable/splash_sunburst"

    android:gravity="center">



    <!-- Sunburst effect (using gradient_splash) -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_splash_login"
        android:scaleType="centerCrop"
        android:contentDescription="Background" />

    <!-- Decorative elements - Top Left -->



    <ImageView



        android:layout_width="40dp"



        android:layout_height="40dp"



        android:src="@drawable/splash_decoration_star"



        android:layout_alignParentTop="true"



        android:layout_alignParentStart="true"



        android:layout_margin="32dp"



        android:alpha="0.6" />



    <!-- Decorative elements - Top Right -->



    <ImageView



        android:layout_width="32dp"



        android:layout_height="32dp"



        android:src="@drawable/splash_decoration_sparkle"



        android:layout_alignParentTop="true"



        android:layout_alignParentEnd="true"



        android:layout_margin="48dp"



        android:alpha="0.5" />



    <!-- Decorative elements - Bottom Left Book -->



    <ImageView



        android:layout_width="56dp"



        android:layout_height="56dp"



        android:src="@drawable/splash_decoration_book"



        android:layout_alignParentBottom="true"



        android:layout_alignParentStart="true"



        android:layout_margin="40dp"



        android:rotation="-15"



        android:alpha="0.7" />



    <!-- Decorative elements - Bottom Right Star -->



    <ImageView



        android:layout_width="36dp"



        android:layout_height="36dp"



        android:src="@drawable/splash_decoration_star"



        android:layout_alignParentBottom="true"



        android:layout_alignParentEnd="true"



        android:layout_margin="56dp"



        android:alpha="0.5" />



    <!-- Decorative sparkle - Middle Right -->



    <ImageView



        android:layout_width="24dp"



        android:layout_height="24dp"



        android:src="@drawable/splash_decoration_sparkle"



        android:layout_alignParentEnd="true"



        android:layout_centerVertical="true"



        android:layout_marginEnd="24dp"



        android:layout_marginTop="-80dp"



        android:alpha="0.4" />



    <!-- Center Content -->


    <LinearLayout


        android:layout_width="wrap_content"


        android:layout_height="wrap_content"


        android:layout_centerInParent="true"


        android:gravity="center"
        android:orientation="vertical">


        <!-- App Name -->


        <TextView


            android:id="@+id/tvAppName"


            android:layout_width="wrap_content"


            android:layout_height="wrap_content"


            android:layout_marginBottom="8dp"


            android:fontFamily="@font/visby_bold"


            android:shadowColor="#20000000"


            android:shadowDx="1"


            android:shadowDy="1"


            android:shadowRadius="2"


            android:text="LiteRise"


            android:textColor="@color/white"


            android:textSize="42sp"


            android:textStyle="bold" />


        <!-- Tagline -->


        <TextView


            android:id="@+id/tvTagline"


            android:layout_width="wrap_content"


            android:layout_height="wrap_content"


            android:alpha="0.8"


            android:fontFamily="@font/visby_regular"


            android:letterSpacing="0.05"


            android:text="Read • Learn • Rise!"


            android:textColor="@color/white"


            android:textSize="16sp" />


    </LinearLayout>






</RelativeLayout>