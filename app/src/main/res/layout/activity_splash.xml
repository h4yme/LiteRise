<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_sunburst"
    android:gravity="center">

    <!-- Decorative star - Top Right -->
    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/splash_decoration_star"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="48dp"
        android:alpha="0.3" />

    <!-- Decorative book - Bottom Left -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/splash_decoration_book"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="48dp"
        android:rotation="-12"
        android:alpha="0.35" />

    <!-- Center Content -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <!-- App Name -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LiteRise"
            android:textSize="56sp"
            android:textStyle="bold"
            android:textColor="#5B4A7A"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing="-0.01"
            android:layout_marginBottom="12dp" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/tvTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read • Learn • Rise"
            android:textSize="15sp"
            android:textColor="#8B7AA8"
            android:fontFamily="@font/poppins_medium"
            android:letterSpacing="0.08" />

    </LinearLayout>

</RelativeLayout>