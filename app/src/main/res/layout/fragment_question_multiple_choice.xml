<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Question Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#4ECDC4"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        android:layout_marginBottom="28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Decorative Emoji Icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ðŸ’­"
                android:textSize="40sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_bold"
                android:lineSpacingExtra="6dp"
                android:text="He was too shy to _____ to strangers."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Answer Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Option A -->
        <androidx.cardview.widget.CardView
            android:id="@+id/optionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Letter Badge -->
                <TextView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/option_letter_badge"
                    android:fontFamily="@font/visby_bold"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginEnd="20dp"
                    android:elevation="4dp" />

                <!-- Answer Text -->
                <TextView
                    android:id="@+id/tvOptionA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/visby_bold"
                    android:text="Talk"
                    android:textColor="#2C3E50"
                    android:textSize="18sp" />

                <!-- Check Icon (Hidden initially) -->
                <ImageView
                    android:id="@+id/ivCheckA"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"
                    app:tint="#2ECC71" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Option B -->
        <androidx.cardview.widget.CardView
            android:id="@+id/optionB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/option_letter_badge"
                    android:fontFamily="@font/visby_bold"
                    android:gravity="center"
                    android:text="B"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginEnd="20dp"
                    android:elevation="4dp" />

                <TextView
                    android:id="@+id/tvOptionB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/visby_bold"
                    android:text="Talking"
                    android:textColor="#2C3E50"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/ivCheckB"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"
                    app:tint="#2ECC71" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Option C -->
        <androidx.cardview.widget.CardView
            android:id="@+id/optionC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/option_letter_badge"
                    android:fontFamily="@font/visby_bold"
                    android:gravity="center"
                    android:text="C"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginEnd="20dp"
                    android:elevation="4dp" />

                <TextView
                    android:id="@+id/tvOptionC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/visby_bold"
                    android:text="Talked"
                    android:textColor="#2C3E50"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/ivCheckC"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"
                    app:tint="#2ECC71" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Option D -->
        <androidx.cardview.widget.CardView
            android:id="@+id/optionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/option_letter_badge"
                    android:fontFamily="@font/visby_bold"
                    android:gravity="center"
                    android:text="D"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginEnd="20dp"
                    android:elevation="4dp" />

                <TextView
                    android:id="@+id/tvOptionD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/visby_bold"
                    android:text="Be Talked"
                    android:textColor="#2C3E50"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/ivCheckD"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_check_circle"
                    android:visibility="gone"
                    app:tint="#2ECC71" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
