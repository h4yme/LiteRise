<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/placement_intro_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Leo Character -->
            <ImageView
                android:id="@+id/ivLeoResult"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/leo_happy"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

            <!-- Congratulations Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_bold"
                android:text="Amazing Work!"
                android:textColor="#2C3E50"
                android:textSize="32sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_medium"
                android:text="You've completed the placement test!"
                android:textAlignment="center"
                android:textColor="#7F8C8D"
                android:textSize="16sp"
                android:layout_marginBottom="32dp" />

            <!-- Reading Level Badge -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visby_medium"
                        android:text="Your Reading Level"
                        android:textColor="#7F8C8D"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Badge Icon -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ†"
                        android:textSize="64sp"
                        android:layout_marginBottom="8dp" />

                    <!-- Level Name -->
                    <TextView
                        android:id="@+id/tvLevelName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visby_bold"
                        android:text="Developing Reader"
                        android:textColor="#2C3E50"
                        android:textSize="28sp"
                        android:layout_marginBottom="8dp" />

                    <!-- Level Number -->
                    <TextView
                        android:id="@+id/tvLevelNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/level_badge_bg"
                        android:fontFamily="@font/visby_bold"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="Level 3"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Statistics Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visby_bold"
                        android:text="Your Performance"
                        android:textColor="#2C3E50"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Stats Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/stat_card_bg"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tvAccuracy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/visby_bold"
                                android:text="85%"
                                android:textColor="#4ECDC4"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/visby_medium"
                                android:text="Accuracy"
                                android:textColor="#7F8C8D"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="12dp"
                            android:layout_height="0dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/stat_card_bg"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tvQuestionsAnswered"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/visby_bold"
                                android:text="25/25"
                                android:textColor="#FF8C42"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/visby_medium"
                                android:text="Questions"
                                android:textColor="#7F8C8D"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Category Breakdown -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visby_bold"
                        android:text="Category Breakdown"
                        android:textColor="#2C3E50"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Category 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/visby_medium"
                            android:text="ðŸ“š Oral Language"
                            android:textColor="#2C3E50"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvCategory1Score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/visby_bold"
                            android:text="83%"
                            android:textColor="#4ECDC4"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Category 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/visby_medium"
                            android:text="ðŸ”¤ Word Knowledge"
                            android:textColor="#2C3E50"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvCategory2Score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/visby_bold"
                            android:text="86%"
                            android:textColor="#4ECDC4"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Category 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/visby_medium"
                            android:text="ðŸ“– Reading Comprehension"
                            android:textColor="#2C3E50"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvCategory3Score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/visby_bold"
                            android:text="80%"
                            android:textColor="#4ECDC4"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Category 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/visby_medium"
                            android:text="âœï¸ Language Structure"
                            android:textColor="#2C3E50"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvCategory4Score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/visby_bold"
                            android:text="100%"
                            android:textColor="#4ECDC4"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Continue Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinueToDashboard"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:fontFamily="@font/visby_bold"
                android:text="Continue to Dashboard"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:backgroundTint="#4ECDC4"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_arrow_right"
                app:iconGravity="end"
                app:iconTint="@color/white"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>