<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp">

    <!-- Leo Character -->
    <ImageView
        android:id="@+id/ivLeoResult"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/leo_happy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvCongrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/visby_bold"
        android:text="Amazing Work!"
        android:textColor="#2C3E50"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/ivLeoResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Reading Level Badge -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/levelCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#4ECDC4"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvCongrats"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ†"
                android:textSize="48sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvLevelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_bold"
                android:text="Developing Reader"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvLevelNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_medium"
                android:text="Level 3"
                android:textColor="#FFD93D"
                android:textSize="16sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Statistics Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statsCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="1.5dp"
        app:strokeColor="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/levelCard"
        app:layout_constraintBottom_toTopOf="@id/btnContinueToDashboard"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Performance Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/stat_card_bg"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvAccuracy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visby_bold"
                        android:text="85%"
                        android:textColor="#4ECDC4"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visby_medium"
                        android:text="Accuracy"
                        android:textColor="#7F8C8D"
                        android:textSize="11sp" />

                </LinearLayout>

                <View
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/stat_card_bg"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvQuestionsAnswered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visby_bold"
                        android:text="25/25"
                        android:textColor="#FF8C42"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visby_medium"
                        android:text="Questions"
                        android:textColor="#7F8C8D"
                        android:textSize="11sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Category Breakdown Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_bold"
                android:text="Category Breakdown"
                android:textColor="#2C3E50"
                android:textSize="13sp"
                android:layout_marginBottom="10dp" />

            <!-- Category Scores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Category 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/visby_medium"
                        android:text="ðŸ“š Oral Language"
                        android:textColor="#2C3E50"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvCategory1Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visby_bold"
                        android:text="83%"
                        android:textColor="#4ECDC4"
                        android:textSize="13sp" />

                </LinearLayout>

                <!-- Category 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/visby_medium"
                        android:text="ðŸ”¤ Word Knowledge"
                        android:textColor="#2C3E50"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvCategory2Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visby_bold"
                        android:text="86%"
                        android:textColor="#4ECDC4"
                        android:textSize="13sp" />

                </LinearLayout>

                <!-- Category 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/visby_medium"
                        android:text="ðŸ“– Reading Comprehension"
                        android:textColor="#2C3E50"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvCategory3Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visby_bold"
                        android:text="80%"
                        android:textColor="#4ECDC4"
                        android:textSize="13sp" />

                </LinearLayout>

                <!-- Category 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/visby_medium"
                        android:text="âœï¸ Language Structure"
                        android:textColor="#2C3E50"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvCategory4Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/visby_bold"
                        android:text="100%"
                        android:textColor="#4ECDC4"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Continue Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinueToDashboard"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:fontFamily="@font/visby_bold"
        android:text="Continue to Dashboard"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:backgroundTint="#4ECDC4"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_arrow_right"
        app:iconGravity="end"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>