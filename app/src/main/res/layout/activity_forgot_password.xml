<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ForgotPasswordActivity">

    <!-- Background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_splash_login"
        android:contentDescription="Background" />

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Top Spacer -->
            <View
                android:layout_width="1dp"
                android:layout_height="60dp" />

            <!-- Step Indicators -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:gravity="center">

                <View
                    android:id="@+id/step1Indicator"
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_marginEnd="8dp"
                    android:background="#6C5CE7" />

                <View
                    android:id="@+id/step2Indicator"
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_marginEnd="8dp"
                    android:background="#E0E0E0" />

                <View
                    android:id="@+id/step3Indicator"
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:background="#E0E0E0" />

            </LinearLayout>

            <!-- Title and Subtitle -->
            <TextView
                android:id="@+id/tvStepTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:fontFamily="@font/visby_bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvStepSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your email to receive a verification code"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:alpha="0.9"
                android:gravity="center"
                android:fontFamily="@font/visby_regular"
                android:layout_marginBottom="32dp" />

            <!-- Main Card Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <!-- STEP 1: Email Input -->
                    <LinearLayout
                        android:id="@+id/step1Container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email Address"
                            android:textColor="#2D3436"
                            android:textSize="14sp"
                            android:fontFamily="@font/visby_medium"
                            android:layout_marginBottom="8dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginBottom="24dp"
                            android:background="@drawable/bg_input_modern">

                            <TextView
                                android:id="@+id/tvEmailIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="16dp"
                                android:text="âœ‰ï¸"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/etEmail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@id/tvEmailIcon"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/visby_regular"
                                android:hint="yourname@example.com"
                                android:inputType="textEmailAddress"
                                android:paddingStart="12dp"
                                android:paddingEnd="20dp"
                                android:textColor="#2D3436"
                                android:textColorHint="#B2BEC3"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSendOTP"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:text="Send Code"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:fontFamily="@font/visby_bold"
                            app:backgroundTint="#6C5CE7"
                            app:cornerRadius="16dp" />

                    </LinearLayout>

                    <!-- STEP 2: OTP Verification -->
                    <LinearLayout
                        android:id="@+id/step2Container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Verification Code"
                            android:textColor="#2D3436"
                            android:textSize="14sp"
                            android:fontFamily="@font/visby_medium"
                            android:layout_marginBottom="8dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/bg_input_modern">

                            <TextView
                                android:id="@+id/tvOTPIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="16dp"
                                android:text="ðŸ”"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/etOTP"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@id/tvOTPIcon"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/visby_regular"
                                android:hint="Enter 6-digit code"
                                android:inputType="number"
                                android:maxLength="6"
                                android:paddingStart="12dp"
                                android:paddingEnd="20dp"
                                android:textColor="#2D3436"
                                android:textColorHint="#B2BEC3"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvOTPTimer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Code expires in 10:00"
                            android:textColor="#636E72"
                            android:textSize="13sp"
                            android:fontFamily="@font/visby_regular"
                            android:gravity="center"
                            android:layout_marginBottom="16dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnVerifyOTP"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:text="Verify Code"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:fontFamily="@font/visby_bold"
                            android:layout_marginBottom="12dp"
                            app:backgroundTint="#6C5CE7"
                            app:cornerRadius="16dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnResendOTP"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:text="Resend Code"
                            android:textColor="#6C5CE7"
                            android:textSize="15sp"
                            android:textAllCaps="false"
                            android:fontFamily="@font/visby_medium"
                            app:strokeColor="#6C5CE7"
                            app:strokeWidth="2dp"
                            app:cornerRadius="16dp" />

                    </LinearLayout>

                    <!-- STEP 3: New Password -->
                    <LinearLayout
                        android:id="@+id/step3Container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="New Password"
                            android:textColor="#2D3436"
                            android:textSize="14sp"
                            android:fontFamily="@font/visby_medium"
                            android:layout_marginBottom="8dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/bg_input_modern">

                            <TextView
                                android:id="@+id/tvPasswordIcon1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="16dp"
                                android:text="ðŸ”’"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/etNewPassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toStartOf="@id/ivPasswordToggle1"
                                android:layout_toEndOf="@id/tvPasswordIcon1"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/visby_regular"
                                android:hint="Enter new password"
                                android:inputType="textPassword"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:textColor="#2D3436"
                                android:textColorHint="#B2BEC3"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/ivPasswordToggle1"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="16dp"
                                android:contentDescription="Toggle password visibility"
                                android:src="@android:drawable/ic_menu_view"
                                app:tint="#B2BEC3" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Confirm Password"
                            android:textColor="#2D3436"
                            android:textSize="14sp"
                            android:fontFamily="@font/visby_medium"
                            android:layout_marginBottom="8dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginBottom="24dp"
                            android:background="@drawable/bg_input_modern">

                            <TextView
                                android:id="@+id/tvPasswordIcon2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="16dp"
                                android:text="ðŸ”’"
                                android:textSize="20sp" />

                            <EditText
                                android:id="@+id/etConfirmPassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toStartOf="@id/ivPasswordToggle2"
                                android:layout_toEndOf="@id/tvPasswordIcon2"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/visby_regular"
                                android:hint="Re-enter new password"
                                android:inputType="textPassword"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:textColor="#2D3436"
                                android:textColorHint="#B2BEC3"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/ivPasswordToggle2"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="16dp"
                                android:contentDescription="Toggle password visibility"
                                android:src="@android:drawable/ic_menu_view"
                                app:tint="#B2BEC3" />

                        </RelativeLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnResetPassword"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:text="Reset Password"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:fontFamily="@font/visby_bold"
                            app:backgroundTint="#6C5CE7"
                            app:cornerRadius="16dp" />

                    </LinearLayout>

                    <!-- SUCCESS Screen -->
                    <LinearLayout
                        android:id="@+id/successContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="gone"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âœ…"
                            android:textSize="64sp"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Password Reset Successful!"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#2D3436"
                            android:fontFamily="@font/visby_bold"
                            android:gravity="center"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="You can now log in with your new password"
                            android:textSize="15sp"
                            android:textColor="#636E72"
                            android:fontFamily="@font/visby_regular"
                            android:gravity="center"
                            android:layout_marginBottom="32dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnBackToLogin"
                            style="@style/Widget.MaterialComponents.Button"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:text="Back to Login"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:fontFamily="@font/visby_bold"
                            app:backgroundTint="#6C5CE7"
                            app:cornerRadius="16dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="1dp"
                android:layout_height="32dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Back Button - Must be last to be on top -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="Back"
        android:elevation="10dp"
        android:focusable="true"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_revert"
        app:tint="@color/white" />

</FrameLayout>