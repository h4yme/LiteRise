<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:clickable="true"
    android:focusable="true">

    <!-- Leo Character Avatar -->
    <ImageView
        android:id="@+id/ivLeoAvatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/leo_happy"
        android:scaleType="centerInside" />

    <!-- Speech Bubble Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvSpeechBubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivLeoAvatar"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#2C3E50"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Leo Name Badge -->
            <TextView
                android:id="@+id/tvLeoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/leo_name_badge"
                android:fontFamily="@font/visby_bold"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Leo"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <!-- Dialogue Text -->
            <TextView
                android:id="@+id/tvDialogue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_medium"
                android:lineSpacingExtra="4dp"
                android:text="Hi! I'm Leo, your reading buddy!"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- Tap to Continue -->
            <LinearLayout
                android:id="@+id/llTapToContinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/visby_medium"
                    android:text="Tap to continue"
                    android:textColor="#BDC3C7"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="#BDC3C7" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Optional: Highlight Target View (for overlaying highlights) -->
    <FrameLayout
        android:id="@+id/flHighlightContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>