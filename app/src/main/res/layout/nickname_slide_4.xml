<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Full Screen Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/nickname_slide_4"
        android:scaleType="centerCrop"
        android:contentDescription="Hi! I'm so excited to learn with you" />

    <!-- Speech Bubble with Greeting (positioned over background) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvSpeechBubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="top|center_horizontal"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F5F3FF">

        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi! I'm so excited\nto learn with you!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#6B4EFF"
            android:fontFamily="@font/visby_bold"
            android:gravity="center"
            android:padding="24dp"
            android:lineSpacingExtra="4dp" />

    </androidx.cardview.widget.CardView>

</FrameLayout>
