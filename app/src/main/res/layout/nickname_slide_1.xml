<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="@drawable/bg_gradient_pink_yellow">



    <!-- Decorative Stars -->

    <ImageView

        android:layout_width="20dp"

        android:layout_height="20dp"

        android:src="@drawable/star_small_yellow"

        android:layout_marginTop="80dp"

        android:layout_marginStart="40dp"

        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        android:contentDescription="Star decoration" />



    <ImageView

        android:layout_width="24dp"

        android:layout_height="24dp"

        android:src="@drawable/star_medium_yellow"

        android:layout_marginTop="90dp"

        android:layout_marginEnd="50dp"

        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintEnd_toEndOf="parent"

        android:contentDescription="Star decoration" />



    <!-- Leo Character -->

    <ImageView

        android:id="@+id/ivLeo"

        android:layout_width="320dp"

        android:layout_height="320dp"

        android:layout_marginBottom="50dp"

        android:src="@drawable/leo_nickname_intro"

        android:contentDescription="Leo the Reading Lion"

        android:scaleType="fitCenter"

        app:layout_constraintBottom_toTopOf="@id/tvMessage"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="parent" />



    <!-- Message Text -->

    <TextView

        android:id="@+id/tvMessage"

        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:layout_marginStart="40dp"

        android:layout_marginEnd="40dp"

        android:layout_marginBottom="200dp"

        android:text="Hi there!\nI'm Leo, the\nReading Lion."

        android:textSize="38sp"

        android:textStyle="bold"

        android:textColor="@color/white"

        android:fontFamily="@font/poppins_bold"

        android:gravity="center"

        android:lineSpacingExtra="4dp"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>