<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout">

    <!-- Nickname Screen Image -->
    <ImageView
        android:id="@+id/ivNicknameScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/nickname_slide_1"
        android:scaleType="centerCrop"
        android:contentDescription="Nickname screen" />

    <!-- Skip Text (Upper Left) -->
    <TextView
        android:id="@+id/tvSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/visby_medium"
        android:clickable="true"
        android:focusable="true"
        android:padding="20dp"
        android:layout_gravity="top|start"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <!-- Tap to Continue Text (Bottom Center) -->
    <TextView
        android:id="@+id/tvTapToContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to continue"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:alpha="0.8"
        android:fontFamily="@font/visby_regular"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="40dp" />

    <!-- Nickname Input Field (Slide 3 only - initially hidden) -->
    <EditText
        android:id="@+id/etNickname"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="180dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/bg_rounded_orange"
        android:hint="Type your nickname here"
        android:textColorHint="#80FFFFFF"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/visby_medium"
        android:gravity="center"
        android:inputType="textCapWords"
        android:maxLength="20"
        android:padding="16dp"
        android:visibility="gone" />

    <!-- Continue Button (Slide 3 only - initially hidden) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="100dp"
        android:layout_gravity="bottom|center_horizontal"
        android:text="Continue"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/visby_bold"
        app:cornerRadius="12dp"
        app:backgroundTint="#FFC126"
        android:elevation="0dp"
        android:visibility="gone" />

    <!-- Greeting Text (Slide 4 only - initially hidden) -->
    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="top|center_horizontal"
        android:text="Hi! I'm so excited\nto learn with you!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#6B4EFF"
        android:fontFamily="@font/visby_bold"
        android:gravity="center"
        android:padding="24dp"
        android:lineSpacingExtra="4dp"
        android:visibility="gone" />

</FrameLayout>
