<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_purple"
    android:fillViewport="true"
    tools:context=".activities.LoginActivity">

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:orientation="vertical"

        android:gravity="center_horizontal"

        android:padding="32dp">



        <!-- App Branding -->

        <TextView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="LiteRise"

            android:textSize="36sp"

            android:textStyle="bold"

            android:textColor="@android:color/white"

            android:fontFamily="@font/poppins_bold"

            android:letterSpacing="-0.01"

            android:layout_marginTop="40dp"

            android:layout_marginBottom="4dp" />



        <!-- Tagline -->

        <TextView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="Read • Learn • Rise!"

            android:textSize="13sp"

            android:textColor="@android:color/white"

            android:alpha="0.9"

            android:fontFamily="@font/poppins_medium"

            android:letterSpacing="0.08"

            android:layout_marginBottom="48dp" />



        <!-- Welcome Heading -->

        <TextView

            android:id="@+id/tvWelcome"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="Welcome Back!"

            android:textSize="28sp"

            android:textStyle="bold"

            android:textColor="@android:color/white"

            android:fontFamily="@font/poppins_bold"

            android:gravity="center"

            android:layout_marginBottom="8dp" />



        <!-- Subtitle -->

        <TextView

            android:id="@+id/tvSubtitle"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:text="Log in to continue your reading adventure"

            android:textSize="14sp"

            android:textColor="@android:color/white"

            android:alpha="0.85"

            android:fontFamily="@font/poppins_regular"

            android:gravity="center"

            android:layout_marginBottom="32dp" />

        <!-- Email Label -->

        <TextView

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:text="Email Address"

            android:textSize="13sp"

            android:textColor="@android:color/white"

            android:fontFamily="@font/poppins_medium"

            android:layout_marginBottom="8dp" />



        <!-- Email Input -->

        <EditText

            android:id="@+id/etEmail"

            android:layout_width="match_parent"

            android:layout_height="56dp"

            android:background="@drawable/bg_rounded_white"

            android:hint="yourname@example.com"

            android:textColorHint="#999999"

            android:textColor="#333333"

            android:textSize="15sp"

            android:fontFamily="@font/poppins_regular"

            android:inputType="textEmailAddress"

            android:paddingStart="20dp"

            android:paddingEnd="20dp"

            android:layout_marginBottom="20dp" />



        <!-- Password Label -->

        <TextView

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:text="Password"

            android:textSize="13sp"

            android:textColor="@android:color/white"

            android:fontFamily="@font/poppins_medium"

            android:layout_marginBottom="8dp" />



        <!-- Password Input Container -->

        <RelativeLayout

            android:layout_width="match_parent"

            android:layout_height="56dp"

            android:background="@drawable/bg_rounded_white"

            android:layout_marginBottom="16dp">



            <EditText

                android:id="@+id/etPassword"

                android:layout_width="match_parent"

                android:layout_height="match_parent"

                android:background="@android:color/transparent"

                android:hint="Enter your password"

                android:textColorHint="#999999"

                android:textColor="#333333"

                android:textSize="15sp"

                android:fontFamily="@font/poppins_regular"

                android:inputType="textPassword"

                android:paddingStart="20dp"

                android:paddingEnd="56dp" />



            <ImageView

                android:id="@+id/ivPasswordToggle"

                android:layout_width="24dp"

                android:layout_height="24dp"

                android:layout_alignParentEnd="true"

                android:layout_centerVertical="true"

                android:layout_marginEnd="16dp"

                android:src="@android:drawable/ic_menu_view"

                android:contentDescription="Toggle password visibility"

                android:tint="#999999" />

        </RelativeLayout>



        <!-- Remember Me & Forgot Password Row -->

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="horizontal"

            android:gravity="center_vertical"

            android:layout_marginBottom="32dp">



            <CheckBox

                android:id="@+id/cbRememberMe"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:text="Remember me"

                android:textSize="13sp"

                android:textColor="@android:color/white"

                android:fontFamily="@font/poppins_regular"

                android:buttonTint="@android:color/white" />



            <Space

                android:layout_width="0dp"

                android:layout_height="1dp"

                android:layout_weight="1" />



            <TextView

                android:id="@+id/tvForgotPassword"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:text="Forgot Password?"

                android:textSize="13sp"

                android:textColor="@android:color/white"

                android:alpha="0.9"

                android:fontFamily="@font/poppins_medium"

                android:clickable="true"

                android:focusable="true" />



        </LinearLayout>



        <!-- Login Button -->

        <com.google.android.material.button.MaterialButton

            android:id="@+id/btnLogin"

            android:layout_width="match_parent"

            android:layout_height="56dp"

            android:text="Let's Read!"

            android:textAllCaps="false"

            android:textSize="16sp"

            android:textStyle="bold"

            android:textColor="@color/white"

            android:fontFamily="@font/poppins_bold"

            app:cornerRadius="12dp"

            app:backgroundTint="#FF9D5C"

            android:elevation="0dp"

            style="@style/Widget.MaterialComponents.Button" />

        <!-- Divider OR Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:alpha="0.7"
            android:fontFamily="@font/poppins_medium"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <!-- Sign Up Link -->
        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New to LiteRise? Sign Up Here!"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/poppins_medium"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>