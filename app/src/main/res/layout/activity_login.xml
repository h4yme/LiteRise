<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- Mascot Image at Top -->
        <ImageView
            android:id="@+id/ivMascot"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:src="@drawable/mascot_happy"
            android:contentDescription="LiteRise mascot"
            android:scaleType="fitCenter"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp" />

        <!-- Welcome Heading -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aloha! Selamat datang di Kids Land!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#6B4BA8"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aplikasi belajar dengan ekosistem dengan karakter favorit dan 7-14 tahun yang dirancang dengan karakter favorit dan permainan interaktif."
            android:textSize="13sp"
            android:textColor="#64748B"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="40dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

        <!-- Register Button (Purple) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Daftar Sekarang"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            app:cornerRadius="12dp"
            app:backgroundTint="#6B4BA8"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Login Button (White with border) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Sudah punya akun? Masuk"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#6B4BA8"
            android:fontFamily="@font/poppins_bold"
            app:cornerRadius="12dp"
            app:strokeColor="#6B4BA8"
            app:strokeWidth="2dp"
            app:backgroundTint="@color/white"
            android:layout_marginBottom="32dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>
</ScrollView>
