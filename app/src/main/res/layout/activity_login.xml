<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">

    <!-- Purple Gradient Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selection_screen_gradient" />

    <!-- Floating Elements Overlay Illustration -->
    <ImageView
        android:id="@+id/ivFloatingElements"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="top"
        android:src="@drawable/floating_elements_overlay"
        android:scaleType="centerCrop"
        android:contentDescription="Floating educational elements"
        android:alpha="0.5" />

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Top Spacer -->
            <View
                android:layout_width="1dp"
                android:layout_height="60dp" />

            <!-- App Branding -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LiteRise"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/visby_bold"
                android:letterSpacing="-0.02"
                android:layout_marginBottom="8dp" />

            <!-- Tagline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read â€¢ Learn â€¢ Rise!"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:alpha="0.9"
                android:fontFamily="@font/visby_medium"
                android:letterSpacing="0.05"
                android:layout_marginBottom="48dp" />

            <!-- Welcome Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <!-- Welcome Heading -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Welcome Learners!"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#2D3436"
                        android:fontFamily="@font/visby_bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Log in to start your reading adventure"
                        android:textSize="15sp"
                        android:textColor="#636E72"
                        android:fontFamily="@font/visby_regular"
                        android:layout_marginBottom="32dp" />

                    <!-- Email Label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email Address"
                        android:textSize="14sp"
                        android:textColor="#2D3436"
                        android:fontFamily="@font/visby_medium"
                        android:layout_marginBottom="8dp" />

                    <!-- Email Input with Icon -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_input_modern"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:id="@+id/tvEmailIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:text="ðŸ“§"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/tvEmailIcon"
                            android:background="@android:color/transparent"
                            android:hint="yourname@example.com"
                            android:textColorHint="#B2BEC3"
                            android:textColor="#2D3436"
                            android:textSize="15sp"
                            android:fontFamily="@font/visby_regular"
                            android:inputType="textEmailAddress"
                            android:paddingStart="12dp"
                            android:paddingEnd="20dp" />

                    </RelativeLayout>

                    <!-- Password Label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textSize="14sp"
                        android:textColor="#2D3436"
                        android:fontFamily="@font/visby_medium"
                        android:layout_marginBottom="8dp" />

                    <!-- Password Input Container with Icon -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_input_modern"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tvPasswordIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:text="ðŸ”’"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toEndOf="@id/tvPasswordIcon"
                            android:layout_toStartOf="@id/ivPasswordToggle"
                            android:background="@android:color/transparent"
                            android:hint="Enter your password"
                            android:textColorHint="#B2BEC3"
                            android:textColor="#2D3436"
                            android:textSize="15sp"
                            android:fontFamily="@font/visby_regular"
                            android:inputType="textPassword"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp" />

                        <ImageView
                            android:id="@+id/ivPasswordToggle"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:src="@android:drawable/ic_menu_view"
                            android:contentDescription="Toggle password visibility"
                            app:tint="#B2BEC3" />

                    </RelativeLayout>

                    <!-- Remember Me & Forgot Password Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="28dp">

                        <CheckBox
                            android:id="@+id/cbRememberMe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remember me"
                            android:textSize="13sp"
                            android:textColor="#636E72"
                            android:fontFamily="@font/visby_regular"
                            android:buttonTint="#6C5CE7" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvForgotPassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Forgot Password?"
                            android:textSize="13sp"
                            android:textColor="#6C5CE7"
                            android:fontFamily="@font/visby_medium"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- Login Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLogin"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:elevation="0dp"
                        android:fontFamily="@font/visby_bold"
                        android:text="Let's Read! ðŸ“š"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        app:backgroundTint="#FFC126"
                        app:cornerRadius="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Sign Up Link -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New to LiteRise? "
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.9"
                    android:fontFamily="@font/visby_regular" />

                <TextView
                    android:id="@+id/tvSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up Here!"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/visby_bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="1dp"
                android:layout_height="32dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
