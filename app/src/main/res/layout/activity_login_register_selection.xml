<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginRegisterSelectionActivity">

    <!-- Gradient Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selection_screen_gradient" />

    <!-- Content Layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="32dp">

            <!-- Top Spacer -->
            <View
                android:layout_width="1dp"
                android:layout_height="60dp" />

            <!-- Leo Character -->
            <ImageView
                android:id="@+id/ivLeo"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/leo_welcome_1"
                android:contentDescription="Leo the Lion"
                android:layout_marginBottom="24dp" />

            <!-- App Logo/Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LiteRise"
                android:textSize="52sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/visby_bold"
                android:letterSpacing="-0.02"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="4"
                android:shadowRadius="12"
                android:layout_marginBottom="8dp" />

            <!-- Tagline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read â€¢ Learn â€¢ Rise!"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/visby_medium"
                android:letterSpacing="0.05"
                android:alpha="0.9"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="8"
                android:layout_marginBottom="48dp" />

            <!-- Welcome Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How would you like to start?"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/visby_medium"
                android:gravity="center"
                android:alpha="0.95"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:layout_marginBottom="32dp" />

            <!-- Login Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Gradient Background for Login Card -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/login_card_gradient" />

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="28dp">

                        <!-- Icon Circle -->
                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginEnd="20dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/icon_circle_white" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="ðŸ‘¤"
                                android:textSize="32sp"
                                android:gravity="center" />

                        </FrameLayout>

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Login"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/visby_bold"
                                android:shadowColor="#40000000"
                                android:shadowDx="0"
                                android:shadowDy="2"
                                android:shadowRadius="4"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Welcome back, friend!"
                                android:textSize="15sp"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/visby_regular"
                                android:alpha="0.9" />

                        </LinearLayout>

                        <!-- Arrow -->
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="â†’"
                            android:textSize="28sp"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:fontFamily="@font/visby_bold" />

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Register Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Gradient Background for Register Card -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/register_card_gradient" />

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="28dp">

                        <!-- Icon Circle -->
                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginEnd="20dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/icon_circle_white" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="âœ¨"
                                android:textSize="32sp"
                                android:gravity="center" />

                        </FrameLayout>

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Register"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/visby_bold"
                                android:shadowColor="#40000000"
                                android:shadowDx="0"
                                android:shadowDy="2"
                                android:shadowRadius="4"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New here? Join the adventure!"
                                android:textSize="15sp"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/visby_regular"
                                android:alpha="0.9" />

                        </LinearLayout>

                        <!-- Arrow -->
                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="â†’"
                            android:textSize="28sp"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:fontFamily="@font/visby_bold" />

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>