<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginRegisterSelectionActivity">

    <!-- Gradient Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selection_screen_gradient" />

    <!-- Floating Elements Overlay Illustration - Partial Top View -->
    <ImageView
        android:id="@+id/ivFloatingElements"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="top"
        android:src="@drawable/floating_elements_overlay"
        android:scaleType="centerCrop"
        android:contentDescription="Floating educational elements"
        android:alpha="0.7" />

    <!-- Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_marginTop="240dp">

        <!-- Welcome Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/visby_regular"
            android:layout_marginBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to LiteRise!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/visby_bold"
            android:layout_marginBottom="6dp" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play, Learn, and Explore with Exciting\nReading Adventures!"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/visby_regular"
            android:alpha="0.9"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="24dp" />

        <!-- Login Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Gradient Background for Login Card -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_card_gradient" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <!-- Icon Circle -->
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/icon_circle_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="ðŸ‘¤"
                            android:textSize="20sp"
                            android:gravity="center" />

                    </FrameLayout>

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Login"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/visby_bold"
                            android:layout_marginBottom="1dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome back, friend!"
                            android:textSize="11sp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/visby_regular"
                            android:alpha="0.9" />

                    </LinearLayout>

                    <!-- Arrow -->
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="â†’"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:fontFamily="@font/visby_bold" />

                </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Register Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Gradient Background for Register Card -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/register_card_gradient" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <!-- Icon Circle -->
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/icon_circle_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="âœ¨"
                            android:textSize="20sp"
                            android:gravity="center" />

                    </FrameLayout>

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Register"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/visby_bold"
                            android:layout_marginBottom="1dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New here? Join the adventure!"
                            android:textSize="11sp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/visby_regular"
                            android:alpha="0.9" />

                    </LinearLayout>

                    <!-- Arrow -->
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="â†’"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:fontFamily="@font/visby_bold" />

                </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>
