<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginRegisterSelectionActivity">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_splash_login"
        android:scaleType="centerCrop"
        android:contentDescription="Background" />

    <!-- Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- Spacer -->
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <!-- App Branding -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LiteRise"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/visby_bold"
            android:letterSpacing="-0.01"
            android:layout_marginBottom="8dp" />

        <!-- Tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read • Learn • Rise!"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:alpha="0.95"
            android:fontFamily="@font/visby_regular"
            android:letterSpacing="0.08"
            android:layout_marginBottom="60dp" />

        <!-- Leo Character -->
        <ImageView
            android:id="@+id/ivLeo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/leo_welcome_1"
            android:contentDescription="Leo the Lion"
            android:layout_marginBottom="24dp"
            android:scaleType="fitCenter"/>

        <!-- Welcome Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi! I'm Leo!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/visby_bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's start your reading adventure!"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:alpha="0.9"
            android:fontFamily="@font/visby_regular"
            android:layout_marginBottom="40dp"
            android:gravity="center" />

        <!-- Spacer -->
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="LOGIN"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/visby_bold"
            app:backgroundTint="#2196F3"
            app:cornerRadius="12dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Register Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="REGISTER"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/visby_bold"
            app:backgroundTint="#4CAF50"
            app:cornerRadius="12dp"
            android:elevation="4dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

</FrameLayout>