<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginRegisterSelectionActivity">

    <!-- Gradient Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selection_screen_gradient" />

    <!-- Floating Illustrations - Smaller and More Subtle -->
    <!-- Top Left - Book -->
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/floating_book_3d"
        android:alpha="0.5"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:contentDescription="Floating book"
        android:rotation="-15" />

    <!-- Top Right - Star -->
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/floating_star_3d"
        android:alpha="0.6"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="80dp"
        android:contentDescription="Floating star" />

    <!-- Top Right Corner - Star Small -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/floating_star_3d"
        android:alpha="0.45"
        android:layout_gravity="end"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="140dp"
        android:contentDescription="Sparkle" />

    <!-- Middle Left - Coin -->
    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/floating_coin_3d"
        android:alpha="0.55"
        android:layout_marginStart="10dp"
        android:layout_marginTop="220dp"
        android:contentDescription="Floating coin"
        android:rotation="25" />

    <!-- Middle Right - Globe -->
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/floating_globe_3d"
        android:alpha="0.5"
        android:layout_gravity="end"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="320dp"
        android:contentDescription="Globe" />

    <!-- Bottom Left - Book Small -->
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/floating_book_3d"
        android:alpha="0.45"
        android:layout_gravity="bottom"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="200dp"
        android:contentDescription="Pencil"
        android:rotation="-20" />

    <!-- Bottom Right - Star Small -->
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/floating_star_3d"
        android:alpha="0.5"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="160dp"
        android:contentDescription="Small star" />

    <!-- Bottom Center - Coin Small -->
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/floating_coin_3d"
        android:alpha="0.4"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="120dp"
        android:contentDescription="Sparkle" />

    <!-- Top Center - Small Coin -->
    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/floating_coin_3d"
        android:alpha="0.4"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="120dp"
        android:contentDescription="Small coin"
        android:rotation="-30" />

    <!-- Content Layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <!-- Top Spacer -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp" />

            <!-- Leo Character with Glow -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <!-- Glow Circle -->
                <View
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:background="@drawable/leo_glow_circle" />

                <!-- Leo Character -->
                <ImageView
                    android:id="@+id/ivLeo"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:src="@drawable/leo_reading_3d"
                    android:contentDescription="Leo the Lion" />

            </FrameLayout>

            <!-- App Logo/Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LiteRise"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/visby_bold"
                android:letterSpacing="-0.02"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="8"
                android:layout_marginBottom="4dp" />

            <!-- Tagline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read â€¢ Learn â€¢ Rise!"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/visby_medium"
                android:letterSpacing="0.05"
                android:alpha="0.9"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:layout_marginBottom="32dp" />

            <!-- Welcome Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How would you like to start?"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/visby_medium"
                android:gravity="center"
                android:alpha="0.95"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_marginBottom="24dp" />

            <!-- Login Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Gradient Background for Login Card -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/login_card_gradient" />

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp">

                        <!-- Icon Circle -->
                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="16dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/icon_circle_white" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="ðŸ‘¤"
                                android:textSize="26sp"
                                android:gravity="center" />

                        </FrameLayout>

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Login"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/visby_bold"
                                android:shadowColor="#40000000"
                                android:shadowDx="0"
                                android:shadowDy="2"
                                android:shadowRadius="4"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Welcome back, friend!"
                                android:textSize="13sp"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/visby_regular"
                                android:alpha="0.9" />

                        </LinearLayout>

                        <!-- Arrow -->
                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="â†’"
                            android:textSize="24sp"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:fontFamily="@font/visby_bold" />

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Register Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Gradient Background for Register Card -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/register_card_gradient" />

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp">

                        <!-- Icon Circle -->
                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="16dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/icon_circle_white" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="âœ¨"
                                android:textSize="26sp"
                                android:gravity="center" />

                        </FrameLayout>

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Register"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/visby_bold"
                                android:shadowColor="#40000000"
                                android:shadowDx="0"
                                android:shadowDy="2"
                                android:shadowRadius="4"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New here? Join the adventure!"
                                android:textSize="13sp"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/visby_regular"
                                android:alpha="0.9" />

                        </LinearLayout>

                        <!-- Arrow -->
                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:text="â†’"
                            android:textSize="24sp"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:fontFamily="@font/visby_bold" />

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="1dp"
                android:layout_height="20dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
