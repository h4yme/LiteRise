<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginRegisterSelectionActivity">

    <!-- Gradient Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selection_screen_gradient" />

    <!-- Floating Elements Overlay Illustration -->
    <ImageView
        android:id="@+id/ivFloatingElements"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/floating_elements_overlay"
        android:scaleType="centerCrop"
        android:contentDescription="Floating educational elements"
        android:alpha="0.85" />

    <!-- Content Layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <!-- Top Spacer -->
            <View
                android:layout_width="1dp"
                android:layout_height="16dp" />

            <!-- Leo Character with Glow -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <!-- Glow Circle -->
                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/leo_glow_circle" />

                <!-- Leo Character -->
                <ImageView
                    android:id="@+id/ivLeo"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:src="@drawable/leo_reading_3d"
                    android:contentDescription="Leo the Lion" />

            </FrameLayout>

            <!-- App Logo/Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LiteRise"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/visby_bold"
                android:letterSpacing="-0.02"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="8"
                android:layout_marginBottom="2dp" />

            <!-- Tagline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read â€¢ Learn â€¢ Rise!"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/visby_medium"
                android:letterSpacing="0.05"
                android:alpha="0.9"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:layout_marginBottom="20dp" />

            <!-- Welcome Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How would you like to start?"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/visby_medium"
                android:gravity="center"
                android:alpha="0.95"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_marginBottom="16dp" />

            <!-- Login Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Gradient Background for Login Card -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/login_card_gradient" />

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp">

                        <!-- Icon Circle -->
                        <FrameLayout
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_marginEnd="12dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/icon_circle_white" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="ðŸ‘¤"
                                android:textSize="22sp"
                                android:gravity="center" />

                        </FrameLayout>

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Login"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/visby_bold"
                                android:shadowColor="#40000000"
                                android:shadowDx="0"
                                android:shadowDy="2"
                                android:shadowRadius="4"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Welcome back, friend!"
                                android:textSize="11sp"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/visby_regular"
                                android:alpha="0.9" />

                        </LinearLayout>

                        <!-- Arrow -->
                        <TextView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:text="â†’"
                            android:textSize="20sp"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:fontFamily="@font/visby_bold" />

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Register Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Gradient Background for Register Card -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/register_card_gradient" />

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp">

                        <!-- Icon Circle -->
                        <FrameLayout
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_marginEnd="12dp">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/icon_circle_white" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="âœ¨"
                                android:textSize="22sp"
                                android:gravity="center" />

                        </FrameLayout>

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Register"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/visby_bold"
                                android:shadowColor="#40000000"
                                android:shadowDx="0"
                                android:shadowDy="2"
                                android:shadowRadius="4"
                                android:layout_marginBottom="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New here? Join the adventure!"
                                android:textSize="11sp"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/visby_regular"
                                android:alpha="0.9" />

                        </LinearLayout>

                        <!-- Arrow -->
                        <TextView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:text="â†’"
                            android:textSize="20sp"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:fontFamily="@font/visby_bold" />

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="1dp"
                android:layout_height="12dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
