<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginRegisterSelectionActivity">

    <!-- Gradient Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selection_screen_gradient" />

    <!-- Floating Elements Overlay Illustration -->
    <ImageView
        android:id="@+id/ivFloatingElements"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/floating_elements_overlay"
        android:scaleType="centerCrop"
        android:contentDescription="Floating educational elements"
        android:alpha="0.85" />

    <!-- Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <!-- Leo Character with Glow -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp">

            <!-- Glow Circle -->
            <View
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/leo_glow_circle" />

            <!-- Leo Character -->
            <ImageView
                android:id="@+id/ivLeo"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:src="@drawable/leo_reading_3d"
                android:contentDescription="Leo the Lion" />

        </FrameLayout>

        <!-- App Logo/Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LiteRise"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/visby_bold"
            android:letterSpacing="-0.02"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="6"
            android:layout_marginBottom="2dp" />

        <!-- Tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read â€¢ Learn â€¢ Rise!"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/visby_medium"
            android:letterSpacing="0.05"
            android:alpha="0.9"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:layout_marginBottom="16dp" />

        <!-- Welcome Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How would you like to start?"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/visby_medium"
            android:gravity="center"
            android:alpha="0.95"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:layout_marginBottom="12dp" />

        <!-- Login Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Gradient Background for Login Card -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_card_gradient" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <!-- Icon Circle -->
                    <FrameLayout
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="10dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/icon_circle_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="ðŸ‘¤"
                            android:textSize="18sp"
                            android:gravity="center" />

                    </FrameLayout>

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Login"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/visby_bold"
                            android:shadowColor="#40000000"
                            android:shadowDx="0"
                            android:shadowDy="1"
                            android:shadowRadius="3"
                            android:layout_marginBottom="1dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome back, friend!"
                            android:textSize="10sp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/visby_regular"
                            android:alpha="0.9" />

                    </LinearLayout>

                    <!-- Arrow -->
                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:text="â†’"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:fontFamily="@font/visby_bold" />

                </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Register Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Gradient Background for Register Card -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/register_card_gradient" />

                <!-- Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <!-- Icon Circle -->
                    <FrameLayout
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="10dp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/icon_circle_white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="âœ¨"
                            android:textSize="18sp"
                            android:gravity="center" />

                    </FrameLayout>

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Register"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/visby_bold"
                            android:shadowColor="#40000000"
                            android:shadowDx="0"
                            android:shadowDy="1"
                            android:shadowRadius="3"
                            android:layout_marginBottom="1dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New here? Join the adventure!"
                            android:textSize="10sp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/visby_regular"
                            android:alpha="0.9" />

                    </LinearLayout>

                    <!-- Arrow -->
                    <TextView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:text="â†’"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:fontFamily="@font/visby_bold" />

                </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>
