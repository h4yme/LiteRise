<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".activities.LoginRegisterSelectionActivity">

    <!-- Content Layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Top Spacer -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp" />

            <!-- App Logo/Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LiteRise"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="#6C5CE7"
                android:fontFamily="@font/visby_bold"
                android:letterSpacing="-0.02"
                android:layout_marginBottom="8dp" />

            <!-- Tagline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read â€¢ Learn â€¢ Rise!"
                android:textSize="16sp"
                android:textColor="#A29BFE"
                android:fontFamily="@font/visby_medium"
                android:letterSpacing="0.05"
                android:layout_marginBottom="32dp" />

            <!-- Leo Character - Circular -->
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="90dp"
                app:cardElevation="12dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/ivLeo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/leo_welcome_1"
                    android:contentDescription="Leo the Lion"
                    android:scaleType="centerCrop"
                    android:padding="16dp" />

            </androidx.cardview.widget.CardView>

            <!-- Welcome Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi! I'm Leo! ðŸ‘‹"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2D3436"
                android:fontFamily="@font/visby_bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's start your amazing reading adventure!"
                android:textSize="15sp"
                android:textColor="#636E72"
                android:fontFamily="@font/visby_regular"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Login Button Card with Scene Illustration -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Purple Scene Illustration -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/scene_illustration_purple"
                        android:scaleType="centerCrop"
                        android:contentDescription="Purple scene" />

                    <!-- Login Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Login"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#2D3436"
                                android:fontFamily="@font/visby_bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Welcome back, friend!"
                                android:textSize="14sp"
                                android:textColor="#636E72"
                                android:fontFamily="@font/visby_regular" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="â†’"
                            android:textSize="32sp"
                            android:textColor="#6C5CE7"
                            android:gravity="center"
                            android:fontFamily="@font/visby_bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Register Button Card with Scene Illustration -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Coral/Orange Scene Illustration -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/scene_illustration_coral"
                        android:scaleType="centerCrop"
                        android:contentDescription="Coral scene" />

                    <!-- Register Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Register"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#2D3436"
                                android:fontFamily="@font/visby_bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New here? Join us!"
                                android:textSize="14sp"
                                android:textColor="#636E72"
                                android:fontFamily="@font/visby_regular" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="â†’"
                            android:textSize="32sp"
                            android:textColor="#00D9A5"
                            android:gravity="center"
                            android:fontFamily="@font/visby_bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="1dp"
                android:layout_height="24dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
