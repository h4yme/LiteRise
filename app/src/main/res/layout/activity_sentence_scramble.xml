<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Gradient Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_game"/>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:tint="#333333"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"/>

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Sentence Scramble"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:fontFamily="@font/poppins_bold"/>
        </RelativeLayout>

        <!-- Instructions Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvInstruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✏️ Instructions"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#7C3AED"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap the words from the word bank to arrange them into a correct sentence. Tap placed words to remove them."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Progress Counter -->
        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 1/10"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#7C3AED"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Answer Drop Zone -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAnswerZone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Answer"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="12dp"/>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/answerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/drop_zone_background"
                    android:padding="12dp"
                    android:minHeight="80dp"
                    app:flexWrap="wrap"
                    app:alignItems="flex_start"
                    app:alignContent="flex_start"
                    app:justifyContent="flex_start"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Word Bank -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWordBank"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F3E8FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Word Bank"
                    android:textSize="14sp"
                    android:textColor="#7C3AED"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/wordBankContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:flexWrap="wrap"
                    app:alignItems="center"
                    app:justifyContent="center"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Check Answer Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCheck"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Check Answer"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold"
            app:cornerRadius="16dp"
            app:backgroundTint="#7C3AED"
            android:textColor="#FFFFFF"
            android:enabled="false"/>
    </LinearLayout>

    <!-- Hidden elements for backward compatibility -->
    <View
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <View
        android:id="@+id/timerProgress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <View
        android:id="@+id/cardStreak"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvStreakCount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <View
        android:id="@+id/streakIndicator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnHint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnSkip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>
</FrameLayout>
