<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/text_primary"
            android:contentDescription="Close" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sentence Scramble"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/10"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/gray_dark" />
        </LinearLayout>

        <!-- Score -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star"
                app:tint="@color/color_sunglow" />

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/color_sunglow"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Streak Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/color_jade1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp">

                <View
                    android:id="@+id/streakIndicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/circle_gradient" />

                <TextView
                    android:id="@+id/tvStreakCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/white"
                    android:layout_marginStart="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" streak"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Timer Bar -->
    <LinearLayout
        android:id="@+id/timerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/header">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_timer"
            app:tint="@color/color_jade1" />

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/color_jade1"
            android:layout_marginStart="8dp" />

        <ProgressBar
            android:id="@+id/timerProgress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:max="180"
            android:progress="180"
            android:progressTint="@color/color_jade1"
            android:progressBackgroundTint="@color/gray_light" />
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:max="100"
        android:progress="0"
        android:progressTint="@color/color_sunglow"
        android:progressBackgroundTint="@color/gray_medium"
        app:layout_constraintTop_toBottomOf="@id/timerContainer" />

    <!-- Instruction Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/progressBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœï¸ Arrange these words to form a sentence:"
                android:textSize="16sp"
                android:textColor="#7C3AED"
                android:fontFamily="@font/poppins_semibold"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap words to add, tap placed words to remove"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/gray_dark"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Answer Drop Zone -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAnswerZone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/cardInstruction"
        app:layout_constraintBottom_toTopOf="@id/cardWordBank"
        app:layout_constraintHeight_percent="0.25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Your Answer"
                android:textSize="14sp"
                android:textColor="#7C3AED"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"
                android:padding="12dp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/answerContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/drop_zone_background"
                android:padding="12dp"
                android:minHeight="80dp"
                app:flexWrap="wrap"
                app:alignItems="flex_start"
                app:alignContent="flex_start"
                app:justifyContent="flex_start" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Word Bank -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardWordBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#7C3AED"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¬ Word Bank"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="12dp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/wordBankContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                app:flexWrap="wrap"
                app:alignItems="center"
                app:justifyContent="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHint"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Hint"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/color_sunglow"
            app:strokeColor="@color/color_sunglow"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_lightbulb"
            app:iconTint="@color/color_sunglow"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSkip"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Skip"
            android:textColor="@color/gray_dark"
            app:strokeColor="@color/gray_medium"
            app:cornerRadius="12dp"
            android:layout_marginHorizontal="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCheck"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1.5"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Check"
            android:textColor="@color/white"
            app:backgroundTint="#10B981"
            app:cornerRadius="12dp"
            android:enabled="false"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
