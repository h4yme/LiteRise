<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Gradient Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_game"/>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Modern Header with Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:padding="8dp"
                app:tint="#333333"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sentence Scramble"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:fontFamily="@font/poppins_bold"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!-- Star Rating Display -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/rounded_bg_accent"
                android:padding="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star"
                    app:tint="#FFD700"/>

                <TextView
                    android:id="@+id/tvStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Progress Card with Combo -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Progress Text -->
                    <TextView
                        android:id="@+id/tvProgress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Question 1/10"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#7C3AED"
                        android:fontFamily="@font/poppins_semibold"/>

                    <!-- Combo Badge -->
                    <TextView
                        android:id="@+id/tvCombo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¥ 2x"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#FF6B35"
                        android:background="@drawable/rounded_bg_accent"
                        android:padding="6dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <!-- Instructions -->
                <TextView
                    android:id="@+id/tvInstruction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœï¸ Tap words to arrange them into a correct sentence"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Answer Drop Zone with Modern Style -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAnswerZone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:strokeWidth="2dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#F8F9FA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Your Answer"
                    android:textSize="14sp"
                    android:textColor="#7C3AED"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="16dp"/>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/answerContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:minHeight="80dp"
                    app:flexWrap="wrap"
                    app:alignItems="flex_start"
                    app:alignContent="flex_start"
                    app:justifyContent="flex_start"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Word Bank with Gradient Background -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWordBank"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.65"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#7C3AED">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ’¬ Word Bank"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_semibold"/>

                    <TextView
                        android:id="@+id/tvWordsRemaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 words"
                        android:textSize="12sp"
                        android:textColor="#E0E0E0"
                        android:fontFamily="@font/poppins"/>
                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/wordBankContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:flexWrap="wrap"
                    app:alignItems="center"
                    app:justifyContent="center"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Modern Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCheck"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Check Answer"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            app:cornerRadius="20dp"
            app:backgroundTint="#10B981"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_check"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"
            android:enabled="false"/>
    </LinearLayout>

    <!-- Hidden elements for backward compatibility -->
    <ProgressBar android:id="@+id/progressBar" style="@style/Widget.AppCompat.ProgressBar.Horizontal" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <ProgressBar android:id="@+id/timerProgress" style="@style/Widget.AppCompat.ProgressBar.Horizontal" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <TextView android:id="@+id/tvTimer" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <TextView android:id="@+id/tvScore" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <androidx.cardview.widget.CardView android:id="@+id/cardStreak" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <TextView android:id="@+id/tvStreakCount" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <View android:id="@+id/streakIndicator" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <com.google.android.material.button.MaterialButton android:id="@+id/btnHint" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <com.google.android.material.button.MaterialButton android:id="@+id/btnSkip" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <androidx.cardview.widget.CardView android:id="@+id/cardInstruction" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
</FrameLayout>
