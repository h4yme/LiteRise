<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="20dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Leo Character -->
        <TextView
            android:id="@+id/tvLeoEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¦"
            android:textSize="120sp"
            android:layout_marginBottom="32dp" />

        <!-- Tutorial Title -->
        <TextView
            android:id="@+id/tvTutorialTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to LiteRise!"
            android:textSize="24sp"
            android:textColor="#2D3436"
            android:fontFamily="@font/visby_bold"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" />

        <!-- Tutorial Description -->
        <TextView
            android:id="@+id/tvTutorialDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm Leo, your reading buddy! I'll help you learn to read in a fun way!"
            android:textSize="16sp"
            android:textColor="#636E72"
            android:fontFamily="@font/visby_regular"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
