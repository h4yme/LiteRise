<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40dp"
            android:gravity="center">

            <!-- Leo Character Image -->
            <ImageView
                android:id="@+id/ivLeoImage"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/leo_welcome_1"
                android:contentDescription="Leo the Lion"
                android:layout_marginBottom="32dp" />

            <!-- Tutorial Title -->
            <TextView
                android:id="@+id/tvTutorialTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to LiteRise!"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2D3436"
                android:fontFamily="@font/visby_bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Tutorial Description -->
            <TextView
                android:id="@+id/tvTutorialDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I'm Leo, your reading buddy! I'll help you learn to read in a fun way!"
                android:textSize="16sp"
                android:textColor="#636E72"
                android:fontFamily="@font/visby_regular"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
