<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="@drawable/background_rounded_white"
    android:layout_marginBottom="8dp">

    <!-- Order Number Badge -->
    <TextView
        android:id="@+id/tvModuleOrder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:background="@drawable/circle_gradient"
        android:layout_marginEnd="12dp" />

    <!-- Module Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvModuleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reading Comprehension"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/color_midnight_green"
            android:fontFamily="@font/poppins_semibold" />

        <TextView
            android:id="@+id/tvModuleStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start here!"
            android:textSize="12sp"
            android:textColor="@color/color_success"
            android:fontFamily="@font/poppins_medium" />
    </LinearLayout>

    <!-- Priority Badge (for first module) -->
    <TextView
        android:id="@+id/tvPriorityBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â­ Priority"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/color_sunglow"
        android:fontFamily="@font/poppins_bold"
        android:background="@drawable/background_badge_accent"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:visibility="gone" />
</LinearLayout>
