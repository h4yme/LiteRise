<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Fun Celebration Background -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_module"
            android:scaleType="centerCrop"
            android:alpha="0.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Celebration Emojis -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ‰âœ¨ðŸ†âœ¨ðŸŽ‰"
                android:textSize="36sp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp" />

            <!-- Result Icon - Dynamic based on performance -->
            <ImageView
                android:id="@+id/ivResultIcon"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_trophy"
                android:tint="@color/gold"
                android:layout_marginBottom="16dp" />

            <!-- Result Title -->
            <TextView
                android:id="@+id/tvResultTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ† Amazing Work!"
                android:textSize="32sp"
                android:fontFamily="@font/visby_bold"
                android:textColor="@color/color_charcoal"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Score Card - Super Fun! -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/gradient_start">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­ Your Score â­"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/visby_bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="@color/white"
                        android:textSize="64sp"
                        android:fontFamily="@font/visby_bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvCorrectCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 / 5 correct answers!"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/visby_medium"
                        android:layout_marginBottom="20dp" />

                    <!-- XP Badge -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="6dp"
                        app:cardBackgroundColor="@color/gold">

                        <TextView
                            android:id="@+id/tvXpAwarded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â­ +100 XP"
                            android:textColor="@color/color_charcoal"
                            android:textSize="24sp"
                            android:fontFamily="@font/visby_bold"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Adaptive Decision Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="ðŸŽ¯"
                            android:textSize="32sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="What's Next?"
                            android:textColor="@color/color_charcoal"
                            android:textSize="18sp"
                            android:fontFamily="@font/visby_bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvAdaptiveDecision"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ready to Proceed"
                        android:textColor="@color/green_500"
                        android:textSize="20sp"
                        android:fontFamily="@font/visby_bold"
                        android:layout_marginBottom="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Next Steps Card with Fun Icons -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="ðŸ“"
                            android:textSize="32sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Your Journey"
                            android:textColor="@color/color_charcoal"
                            android:textSize="18sp"
                            android:fontFamily="@font/visby_bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvNextSteps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You've done great! Keep up the amazing work! ðŸŒŸ"
                        android:textColor="@color/color_charcoal"
                        android:textSize="16sp"
                        android:fontFamily="@font/visby_regular"
                        android:lineSpacingMultiplier="1.5" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinue"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="ðŸš€ Continue Adventure!"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/visby_bold"
                android:textAllCaps="false"
                app:backgroundTint="@color/success_green"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_arrow_right"
                app:iconGravity="end"
                app:iconTint="@color/white"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRetakeQuiz"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ðŸ”„ Try Quiz Again"
                android:textColor="@color/orange_500"
                android:textSize="16sp"
                android:fontFamily="@font/visby_bold"
                android:textAllCaps="false"
                app:strokeColor="@color/orange_500"
                app:strokeWidth="2dp"
                app:cornerRadius="20dp"
                android:visibility="gone" />

            <!-- Bottom Spacer -->
            <View
                android:layout_width="1dp"
                android:layout_height="20dp" />

        </LinearLayout>

    </FrameLayout>

</ScrollView>
