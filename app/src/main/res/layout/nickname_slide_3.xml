<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_pink_yellow">

    <!-- Decorative Stars -->
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/star_small_yellow"
        android:layout_marginTop="80dp"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="Star decoration" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/star_medium_yellow"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Star decoration" />

    <!-- Leo Character -->
    <ImageView
        android:id="@+id/ivLeo"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/leo_nickname_intro"
        android:contentDescription="Leo the Reading Lion"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/tvMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Message Text -->
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="28dp"
        android:text="What would we call\nyou? Set up your\nnickname."
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/fredoka_bold"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintBottom_toTopOf="@id/etNickname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nickname Input -->
    <EditText
        android:id="@+id/etNickname"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="180dp"
        android:background="@drawable/bg_rounded_orange"
        android:hint="Type your nickname here"
        android:textColorHint="#80FFFFFF"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/fredoka_medium"
        android:gravity="center"
        android:inputType="textCapWords"
        android:maxLength="20"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
