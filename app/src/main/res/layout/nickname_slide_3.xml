<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Full Screen Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/nickname_slide_3"
        android:scaleType="centerCrop"
        android:contentDescription="What would we call you" />

    <!-- Nickname Input Field (positioned over background) -->
    <EditText
        android:id="@+id/etNickname"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="180dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/bg_rounded_orange"
        android:hint="Type your nickname here"
        android:textColorHint="#80FFFFFF"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/visby_medium"
        android:gravity="center"
        android:inputType="textCapWords"
        android:maxLength="20"
        android:padding="16dp" />

</FrameLayout>
