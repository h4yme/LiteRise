<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"

    android:layout_height="wrap_content"

    android:orientation="vertical"

    android:gravity="center"

    android:layout_marginBottom="24dp">



    android:layout_marginBottom="40dp">



    <!-- Lesson Node Circle -->

    <FrameLayout

        android:layout_width="80dp"

        android:layout_height="80dp">



        <ImageView

            android:id="@+id/ivNodeBackground"

            android:layout_width="match_parent"

            android:layout_height="match_parent"

            android:src="@drawable/bg_lesson_node_locked"

            android:elevation="4dp"

            android:contentDescription="Lesson Node"/>



        <ImageView

            android:id="@+id/ivNodeIcon"

            android:layout_width="32dp"

            android:layout_height="32dp"

            android:layout_gravity="center"

            android:src="@drawable/ic_lock"

            app:tint="#FFFFFF"

            android:contentDescription="Node Status"/>

        <!-- Game Type Badge -->
        <ImageView
            android:id="@+id/ivGameBadge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_game_controller"
            android:background="@drawable/bg_game_badge"
            android:padding="4dp"
            android:elevation="6dp"
            android:visibility="gone"
            android:contentDescription="Game Type"/>

    </FrameLayout>



    <!-- Lesson Number -->

    <TextView

        android:id="@+id/tvLessonNumber"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="1"

        android:textSize="12sp"

        android:textColor="#FFFFFF"

        android:fontFamily="@font/poppins"

        android:layout_marginTop="8dp"

        android:alpha="0.7"/>

</LinearLayout>