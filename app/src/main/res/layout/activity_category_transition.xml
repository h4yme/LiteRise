<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/placement_intro_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Category Icon -->
        <TextView
            android:id="@+id/tvCategoryIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“š"
            android:textSize="80sp"
            android:layout_marginBottom="24dp" />

        <!-- Category Title -->
        <TextView
            android:id="@+id/tvCategoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/visby_bold"
            android:text="Great Job!"
            android:textColor="#2C3E50"
            android:textSize="32sp"
            android:layout_marginBottom="16dp" />

        <!-- Category Name -->
        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/visby_bold"
            android:text="Category 2: Word Knowledge"
            android:textAlignment="center"
            android:textColor="#4ECDC4"
            android:textSize="24sp"
            android:layout_marginBottom="16dp" />

        <!-- Leo Message -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <!-- Leo Avatar -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/leo_happy"
                    android:layout_marginEnd="16dp" />

                <!-- Message -->
                <TextView
                    android:id="@+id/tvLeoMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/visby_medium"
                    android:text="Now let's test your word knowledge! You're doing amazing! ðŸŒŸ"
                    android:textColor="#2C3E50"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:fontFamily="@font/visby_bold"
            android:text="Let's Go!"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:backgroundTint="#4ECDC4"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_arrow_right"
            app:iconGravity="end"
            app:iconTint="@color/white" />

    </LinearLayout>

</RelativeLayout>