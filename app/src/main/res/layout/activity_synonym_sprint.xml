<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_sprint">

    <!-- Game Container -->
    <FrameLayout
        android:id="@+id/gameContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Character (Runner) -->
        <View
            android:id="@+id/characterView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="600dp"
            android:background="@drawable/character_runner"/>

    </FrameLayout>

    <!-- UI Overlay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Score -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/rounded_bg_dark"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SCORE"
                    android:textSize="10sp"
                    android:textColor="#AAAAAA"
                    android:fontFamily="@font/visby_bold"/>

                <TextView
                    android:id="@+id/tvScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/visby_bold"/>
            </LinearLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp"/>

            <!-- Distance -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/rounded_bg_dark"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DISTANCE"
                    android:textSize="10sp"
                    android:textColor="#AAAAAA"
                    android:fontFamily="@font/visby_bold"/>

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0m"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/visby_bold"/>
            </LinearLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp"/>

            <!-- Lives -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_bg_dark"
                android:padding="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/heart1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart"
                    app:tint="#FF6B6B"
                    android:layout_marginEnd="4dp"/>

                <ImageView
                    android:id="@+id/heart2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart"
                    app:tint="#FF6B6B"
                    android:layout_marginEnd="4dp"/>

                <ImageView
                    android:id="@+id/heart3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart"
                    app:tint="#FF6B6B"/>

                <TextView
                    android:id="@+id/tvLives"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/visby_bold"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp"/>

            <!-- Pause Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="â¸"
                android:textSize="18sp"
                android:fontFamily="@font/visby_bold"
                app:cornerRadius="24dp"
                android:backgroundTint="#333333"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:iconPadding="0dp"/>
        </LinearLayout>

        <Space
            android:layout_width="1dp"
            android:layout_height="12dp"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progress_gradient"
            android:max="100"
            android:progress="0"/>

        <Space
            android:layout_width="1dp"
            android:layout_height="16dp"/>

        <!-- Target Word Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTargetWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:backgroundTint="#4ECDC4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COLLECT SYNONYMS OF:"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/visby_bold"/>

                <TextView
                    android:id="@+id/tvTargetWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HAPPY"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/visby_bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Combo Card (Hidden by default) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCombo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="100dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            android:backgroundTint="#FF9933">

            <TextView
                android:id="@+id/tvCombo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3x STREAK!"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/visby_bold"
                android:padding="20dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>
