<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_dashboard"
        android:scaleType="centerCrop"
        android:contentDescription="Dashboard Background"/>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <!-- Home Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Home"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2D3436"
                    android:fontFamily="@font/poppins_bold"/>

                <!-- XP Badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_rounded_white"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_fire"
                        android:layout_marginEnd="4dp"
                        app:tint="#FF6B35"
                        android:contentDescription="XP Icon"/>

                    <TextView
                        android:id="@+id/tvHeaderXP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2500 XP"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#FF6B35"
                        android:fontFamily="@font/poppins_semibold"/>
                </LinearLayout>

                <!-- Streak Badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_rounded_white"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_fire"
                        android:layout_marginEnd="4dp"
                        app:tint="#F39C12"
                        android:contentDescription="Streak Icon"/>

                    <TextView
                        android:id="@+id/tvStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#F39C12"
                        android:fontFamily="@font/poppins_semibold"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Welcome Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <!-- Welcome Text Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello, Jaimes"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#2D3436"
                        android:fontFamily="@font/poppins_bold"/>

                    <TextView
                        android:id="@+id/tvMotivation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ready to learn something new today?"
                        android:textSize="14sp"
                        android:textColor="#636E72"
                        android:fontFamily="@font/poppins"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Leo Mascot -->
                <ImageView
                    android:id="@+id/ivLeoMascot"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/leo_placement_test"
                    android:scaleType="fitCenter"
                    android:contentDescription="Leo Mascot"/>
            </LinearLayout>

            <!-- Continue Last Lesson Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinueLesson"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Continue last lesson"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2D3436"
                app:cornerRadius="28dp"
                app:backgroundTint="#FFD93D"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="24dp"
                app:icon="@drawable/ic_play_circle"
                app:iconTint="#2D3436"
                app:iconSize="24dp"
                android:visibility="gone"/>

            <!-- Categories Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2D3436"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="16dp"/>

            <!-- Module Cards Grid (2x3) -->
            <GridLayout
                android:id="@+id/gridModules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignBounds"
                android:columnOrderPreserved="false">

                <!-- Module cards will be added programmatically -->

            </GridLayout>

            <!-- Bottom Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
