<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <!-- Background Image (same as placement test) -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_placement"
        android:scaleType="centerCrop"
        android:contentDescription="Placement Test Background" />

    <!-- Content Container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <!-- Speech Bubble (centered in upper portion) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSpeechBubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Tutorial Message -->
                <TextView
                    android:id="@+id/tvTutorialMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hi! I'm Leo! ðŸ¦\n\nI'll guide you through a quick placement test. You'll answer questions by:\n\nâ€¢ Reading passages\nâ€¢ Tapping your answer (a, b, c, or d)\nâ€¢ Using the microphone for some questions\n\nDon't worry - just do your best!"
                    android:textSize="15sp"
                    android:textColor="#2D3436"
                    android:lineSpacingExtra="4dp"
                    android:gravity="start" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Small tail for speech bubble (pointing down to Leo) -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/cardSpeechBubble"
            android:layout_centerHorizontal="true" />

        <!-- Leo Mascot (bottom center) -->
        <ImageView
            android:id="@+id/ivLeoMascot"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:src="@drawable/leo_placement_test"
            android:scaleType="fitCenter"
            android:contentDescription="Leo Mascot" />

        <!-- Tap to Continue (bottom) -->
        <TextView
            android:id="@+id/tvTapToContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:text="Tap to Continue"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="12dp" />

    </RelativeLayout>

</FrameLayout>
