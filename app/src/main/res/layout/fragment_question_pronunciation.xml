<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Instruction Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/primary_blue"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        android:layout_marginBottom="28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Microphone Icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ðŸŽ¤"
                android:textSize="48sp"
                android:layout_marginBottom="12dp" />

            <!-- Instruction Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_bold"
                android:lineSpacingExtra="4dp"
                android:text="Say this word out loud!"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <!-- Word to Pronounce -->
            <TextView
                android:id="@+id/tvWordToPronounce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_bold"
                android:text="Beautiful"
                android:textAlignment="center"
                android:textColor="@color/accent_yellow"
                android:textSize="36sp"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Recording Controls -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Recording Status -->
            <TextView
                android:id="@+id/tvRecordingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_bold"
                android:text="Tap the microphone to start"
                android:textColor="#7F8C8D"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- Microphone Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnMicrophone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_mic"
                app:backgroundTint="@color/success_green"
                app:elevation="12dp"
                app:fabSize="normal"
                app:tint="@color/white"
                android:layout_marginBottom="16dp" />

            <!-- Waveform Animation Container -->
            <LinearLayout
                android:id="@+id/waveformContainer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="16dp">

                <!-- Animated bars will be added programmatically -->
                <View
                    android:id="@+id/wave1"
                    android:layout_width="8dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="4dp"
                    android:background="@color/success_green" />

                <View
                    android:id="@+id/wave2"
                    android:layout_width="8dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="4dp"
                    android:background="@color/success_green" />

                <View
                    android:id="@+id/wave3"
                    android:layout_width="8dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:background="@color/success_green" />

                <View
                    android:id="@+id/wave4"
                    android:layout_width="8dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="4dp"
                    android:background="@color/success_green" />

                <View
                    android:id="@+id/wave5"
                    android:layout_width="8dp"
                    android:layout_height="20dp"
                    android:background="@color/success_green" />

            </LinearLayout>

            <!-- Play Back Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlayback"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_bold"
                android:text="Listen to your recording"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_play"
                app:iconGravity="start"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Feedback Card (shown after recording) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/feedbackCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E8F5E9"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <!-- Feedback Icon -->
            <TextView
                android:id="@+id/tvFeedbackIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ‰"
                android:textSize="48sp"
                android:layout_marginBottom="12dp" />

            <!-- Feedback Text -->
            <TextView
                android:id="@+id/tvFeedbackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_bold"
                android:text="Great job! You said it perfectly!"
                android:textAlignment="center"
                android:textColor="#2E7D32"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <!-- Score -->
            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_bold"
                android:text="95% Match"
                android:textColor="#1B5E20"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
