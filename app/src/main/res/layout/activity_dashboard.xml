<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent">



    <!-- Background Image -->

    <ImageView

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:src="@drawable/bg_dashboard"

        android:scaleType="centerCrop"

        android:contentDescription="Dashboard Background"/>



    <!-- Main Content -->

    <ScrollView

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:fillViewport="true">



        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="vertical"

            android:padding="20dp">



            <!-- Header Section -->

            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:orientation="vertical">



                <!-- Top Row: Home Title and Badges -->

                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:orientation="horizontal"

                    android:gravity="center_vertical"

                    android:layout_marginBottom="12dp">



                    <!-- Home Title -->

                    <TextView

                        android:layout_width="0dp"

                        android:layout_height="wrap_content"

                        android:layout_weight="1"

                        android:text="Home"

                        android:textSize="25sp"

                        android:textStyle="bold"

                        android:textColor="#2D3436"

                        android:fontFamily="@font/visby_bold"/>



                    <!-- XP Badge -->

                    <LinearLayout

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:orientation="horizontal"

                        android:background="@drawable/bg_rounded_white"

                        android:paddingStart="12dp"

                        android:paddingEnd="12dp"

                        android:paddingTop="6dp"

                        android:paddingBottom="6dp"

                        android:layout_marginEnd="8dp"

                        android:gravity="center">



                        <ImageView

                            android:layout_width="18dp"

                            android:layout_height="18dp"

                            android:src="@drawable/ic_star"

                            android:layout_marginEnd="4dp"

                            app:tint="#FFD700"

                            android:contentDescription="XP Icon"/>



                        <TextView

                            android:id="@+id/tvHeaderXP"

                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:text="2500 XP"

                            android:textSize="11sp"

                            android:textStyle="bold"

                            android:textColor="#2D3436"

                            android:fontFamily="@font/poppins_semibold"/>

                    </LinearLayout>



                    <!-- Shield Badge -->

                    <ImageView

                        android:layout_width="32dp"

                        android:layout_height="32dp"

                        android:src="@drawable/ic_star"

                        android:background="@drawable/bg_rounded_white"

                        android:padding="6dp"

                        android:layout_marginEnd="8dp"

                        app:tint="#FF6B35"

                        android:contentDescription="Shield Badge"/>



                    <!-- Settings Icon -->

                    <ImageView

                        android:id="@+id/ivSettings"

                        android:layout_width="32dp"

                        android:layout_height="32dp"

                        android:src="@drawable/ic_settings"

                        android:background="@drawable/bg_rounded_white"

                        android:padding="6dp"

                        app:tint="#636E72"

                        android:contentDescription="Settings"/>

                </LinearLayout>



                <!-- Pills Row: Streak and Badges -->

                <LinearLayout

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:orientation="horizontal">



                    <!-- Streak Pill -->

                    <LinearLayout

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:orientation="horizontal"

                        android:background="@drawable/bg_rounded_white"

                        android:paddingStart="12dp"

                        android:paddingEnd="12dp"

                        android:paddingTop="6dp"

                        android:paddingBottom="6dp"

                        android:layout_marginEnd="8dp"

                        android:gravity="center">



                        <ImageView

                            android:layout_width="14dp"

                            android:layout_height="14dp"

                            android:src="@drawable/ic_fire"

                            android:layout_marginEnd="4dp"

                            app:tint="#FF6B35"

                            android:contentDescription="Streak Icon"/>



                        <TextView

                            android:id="@+id/tvStreak"

                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:text="10-Day Streak"

                            android:textSize="10sp"

                            android:textColor="#636E72"

                            android:fontFamily="@font/poppins"/>

                    </LinearLayout>



                    <!-- Badges Pill -->

                    <LinearLayout

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:orientation="horizontal"

                        android:background="@drawable/bg_rounded_white"

                        android:paddingStart="12dp"

                        android:paddingEnd="12dp"

                        android:paddingTop="6dp"

                        android:paddingBottom="6dp"

                        android:gravity="center">



                        <TextView

                            android:id="@+id/tvBadges"

                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:text="7 Badges"

                            android:textSize="10sp"

                            android:textColor="#636E72"

                            android:fontFamily="@font/poppins"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



            <!-- Welcome Section -->

            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:orientation="horizontal"

                android:gravity="center_vertical"

                >



                <!-- Welcome Text Container -->

                <LinearLayout

                    android:layout_width="0dp"

                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:orientation="vertical">



                    <TextView

                        android:id="@+id/tvWelcome"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:text="Hello, Jaimes"

                        android:textSize="30sp"

                        android:textStyle="bold"

                        android:textColor="#7C3AED"

                        android:fontFamily="@font/visby_bold"/>



                    <TextView

                        android:id="@+id/tvMotivation"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:text="Ready to learn something new today? Letâ€™s make your reading adventure awesome!"

                        android:textSize="12sp"

                        android:textColor="#636E72"

                        android:fontFamily="@font/visby_regular"

                        android:layout_marginTop="4dp"

                        android:maxLines="2"

                        android:ellipsize="end"/>

                </LinearLayout>



                <!-- Leo Mascot -->

                <ImageView

                    android:id="@+id/ivLeoMascot"

                    android:layout_width="140dp"

                    android:layout_height="140dp"

                    android:src="@drawable/leo_placement_test"

                    android:scaleType="fitCenter"

                    android:contentDescription="Leo Mascot"/>

            </LinearLayout>



            <!-- Continue Last Lesson Button -->

            <com.google.android.material.button.MaterialButton

                android:id="@+id/btnContinueLesson"

                android:layout_width="match_parent"

                android:layout_height="56dp"

                android:text="Continue last lesson"

                android:textSize="16sp"

                android:textStyle="bold"

                android:textColor="#2D3436"

                app:cornerRadius="28dp"

                app:backgroundTint="#FFD93D"

                android:fontFamily="@font/poppins_semibold"

                android:layout_marginBottom="24dp"

                app:icon="@drawable/ic_play_circle"

                app:iconTint="#2D3436"

                app:iconSize="24dp"

                android:visibility="gone"/>



            <!-- Learning Modules Section -->

            <TextView

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:text="Your Learning Path"

                android:textSize="18sp"

                android:textStyle="bold"

                android:textColor="#2D3436"

                android:fontFamily="@font/poppins_semibold"

                android:layout_marginBottom="8dp"/>



            <TextView

                android:id="@+id/tvModuleSummary"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:text="Based on your placement test results"

                android:textSize="12sp"

                android:textColor="#636E72"

                android:fontFamily="@font/visby_regular"

                android:layout_marginBottom="16dp"/>



            <!-- Modules RecyclerView -->

            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/rvModules"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:clipToPadding="false" />



            <!-- Bottom Spacing -->

            <View

                android:layout_width="match_parent"

                android:layout_height="40dp"/>



        </LinearLayout>

    </ScrollView>
    <!-- Tutorial Overlay -->

    <include layout="@layout/tutorial_dashboard_overlay"/>

</FrameLayout>

