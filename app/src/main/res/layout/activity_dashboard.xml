<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="@color/gray_light"

    android:fillViewport="true">



    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:orientation="vertical"

        android:padding="20dp">



        <!-- Header Section -->

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="horizontal"

            android:gravity="center_vertical"

            android:layout_marginBottom="24dp">



            <!-- Profile Picture -->

            <androidx.cardview.widget.CardView

                android:layout_width="60dp"

                android:layout_height="60dp"

                app:cardCornerRadius="30dp"

                app:cardElevation="4dp"

                app:cardBackgroundColor="@color/color_jade1">



                <TextView

                    android:id="@+id/tvProfileInitial"

                    android:layout_width="match_parent"

                    android:layout_height="match_parent"

                    android:text="A"

                    android:textSize="24sp"

                    android:textStyle="bold"

                    android:textColor="@color/white"

                    android:gravity="center"

                    android:fontFamily="sans-serif-medium"/>

            </androidx.cardview.widget.CardView>



            <!-- Welcome Text -->

            <LinearLayout

                android:layout_width="0dp"

                android:layout_height="wrap_content"

                android:layout_weight="1"

                android:orientation="vertical"

                android:layout_marginStart="16dp">



                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:text="Welcome back,"

                    android:textSize="14sp"

                    android:textColor="@color/gray_dark"/>



                <TextView

                    android:id="@+id/tvUserName"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:text="Student Name"

                    android:textSize="20sp"

                    android:textStyle="bold"

                    android:textColor="@color/text_primary"

                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>



            <!-- Settings Icon -->

            <ImageView

                android:id="@+id/ivSettings"

                android:layout_width="40dp"

                android:layout_height="40dp"

                android:src="@drawable/ic_settings"

                android:padding="8dp"

                android:background="?attr/selectableItemBackgroundBorderless"

                app:tint="@color/gray_dark"

                android:contentDescription="Settings"/>

        </LinearLayout>



        <!-- Stats Cards -->

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="horizontal"

            android:layout_marginBottom="24dp">



            <!-- XP Card -->

            <androidx.cardview.widget.CardView

                android:layout_width="0dp"

                android:layout_height="wrap_content"

                android:layout_weight="1"

                android:layout_marginEnd="8dp"

                app:cardCornerRadius="16dp"

                app:cardElevation="2dp"

                app:cardBackgroundColor="@color/white">



                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:orientation="vertical"

                    android:padding="16dp"

                    android:gravity="center">



                    <ImageView

                        android:layout_width="32dp"

                        android:layout_height="32dp"

                        android:src="@drawable/ic_star"

                        app:tint="@color/color_sunglow"

                        android:layout_marginBottom="8dp"/>



                    <TextView

                        android:id="@+id/tvXP"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:text="1250"

                        android:textSize="24sp"

                        android:textStyle="bold"

                        android:textColor="@color/text_primary"

                        android:fontFamily="sans-serif-medium"/>



                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:text="Total XP"

                        android:textSize="12sp"

                        android:textColor="@color/gray_dark"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <!-- Ability Level Card -->

            <androidx.cardview.widget.CardView

                android:layout_width="0dp"

                android:layout_height="wrap_content"

                android:layout_weight="1"

                android:layout_marginStart="8dp"

                app:cardCornerRadius="16dp"

                app:cardElevation="2dp"

                app:cardBackgroundColor="@color/white">



                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:orientation="vertical"

                    android:padding="16dp"

                    android:gravity="center">



                    <ImageView

                        android:layout_width="32dp"

                        android:layout_height="32dp"

                        android:src="@drawable/ic_trophy"

                        app:tint="@color/color_jade1"

                        android:layout_marginBottom="8dp"/>



                    <TextView

                        android:id="@+id/tvAbilityLevel"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:text="Intermediate"

                        android:textSize="16sp"

                        android:textStyle="bold"

                        android:textColor="@color/text_primary"

                        android:fontFamily="sans-serif-medium"/>



                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:text="Ability Level"

                        android:textSize="12sp"

                        android:textColor="@color/gray_dark"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>



        <!-- Progress Section -->

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginBottom="24dp"

            app:cardCornerRadius="16dp"

            app:cardElevation="2dp"

            app:cardBackgroundColor="@color/color_jade1">



            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:padding="20dp">



                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:text="Your Progress"

                    android:textSize="18sp"

                    android:textStyle="bold"

                    android:textColor="@color/white"

                    android:fontFamily="sans-serif-medium"

                    android:layout_marginBottom="12dp"/>



                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:orientation="horizontal"

                    android:layout_marginBottom="8dp">



                    <TextView

                        android:layout_width="0dp"

                        android:layout_height="wrap_content"

                        android:layout_weight="1"

                        android:text="Level 3"

                        android:textColor="@color/white"

                        android:textSize="14sp"/>



                    <TextView

                        android:id="@+id/tvProgressPercentage"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:text="75%"

                        android:textColor="@color/white"

                        android:textStyle="bold"

                        android:textSize="14sp"/>

                </LinearLayout>



                <ProgressBar

                    android:id="@+id/progressBar"

                    style="?android:attr/progressBarStyleHorizontal"

                    android:layout_width="match_parent"

                    android:layout_height="8dp"

                    android:max="100"

                    android:progress="75"

                    android:progressTint="@color/color_sunglow"

                    android:progressBackgroundTint="@color/color_jade2"/>



                <TextView

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:text="250 XP to next level"

                    android:textColor="@color/white"

                    android:textSize="12sp"

                    android:layout_marginTop="8dp"

                    android:alpha="0.9"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <!-- Quick Actions Title -->

        <TextView

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:text="Learning Modules"

            android:textSize="18sp"

            android:textStyle="bold"

            android:textColor="@color/text_primary"

            android:fontFamily="sans-serif-medium"

            android:layout_marginBottom="16dp"/>



        <!-- Module Cards -->

        <!-- Reading Comprehension -->

        <androidx.cardview.widget.CardView

            android:id="@+id/cardReadingModule"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginBottom="12dp"

            app:cardCornerRadius="16dp"

            app:cardElevation="2dp"

            app:cardBackgroundColor="@color/white"

            android:clickable="true"

            android:foreground="?attr/selectableItemBackground">



            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:orientation="horizontal"

                android:padding="16dp"

                android:gravity="center_vertical">



                <androidx.cardview.widget.CardView

                    android:layout_width="56dp"

                    android:layout_height="56dp"

                    app:cardCornerRadius="12dp"

                    app:cardElevation="0dp"

                    app:cardBackgroundColor="@color/color_old_lace">



                    <ImageView

                        android:layout_width="32dp"

                        android:layout_height="32dp"

                        android:src="@drawable/ic_book_reading"

                        android:layout_gravity="center"

                        app:tint="@color/color_jade1"/>

                </androidx.cardview.widget.CardView>



                <LinearLayout

                    android:layout_width="0dp"

                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:orientation="vertical"

                    android:layout_marginStart="16dp">



                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:text="Reading Comprehension"

                        android:textSize="16sp"

                        android:textStyle="bold"

                        android:textColor="@color/text_primary"

                        android:fontFamily="sans-serif-medium"/>



                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:text="12 lessons • 45 min"

                        android:textSize="12sp"

                        android:textColor="@color/gray_dark"

                        android:layout_marginTop="4dp"/>

                </LinearLayout>



                <ImageView

                    android:layout_width="24dp"

                    android:layout_height="24dp"

                    android:src="@drawable/ic_arrow_right"

                    app:tint="@color/gray_medium"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <!-- Vocabulary Building -->

        <androidx.cardview.widget.CardView

            android:id="@+id/cardVocabModule"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginBottom="12dp"

            app:cardCornerRadius="16dp"

            app:cardElevation="2dp"

            app:cardBackgroundColor="@color/white"

            android:clickable="true"

            android:foreground="?attr/selectableItemBackground">



            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:orientation="horizontal"

                android:padding="16dp"

                android:gravity="center_vertical">



                <androidx.cardview.widget.CardView

                    android:layout_width="56dp"

                    android:layout_height="56dp"

                    app:cardCornerRadius="12dp"

                    app:cardElevation="0dp"

                    app:cardBackgroundColor="#FFF8E1">



                    <ImageView

                        android:layout_width="32dp"

                        android:layout_height="32dp"

                        android:src="@drawable/ic_lightbulb"

                        android:layout_gravity="center"

                        app:tint="@color/color_sunglow"/>

                </androidx.cardview.widget.CardView>



                <LinearLayout

                    android:layout_width="0dp"

                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:orientation="vertical"

                    android:layout_marginStart="16dp">



                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:text="Vocabulary Building"

                        android:textSize="16sp"

                        android:textStyle="bold"

                        android:textColor="@color/text_primary"

                        android:fontFamily="sans-serif-medium"/>



                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:text="8 lessons • 30 min"

                        android:textSize="12sp"

                        android:textColor="@color/gray_dark"

                        android:layout_marginTop="4dp"/>

                </LinearLayout>



                <ImageView

                    android:layout_width="24dp"

                    android:layout_height="24dp"

                    android:src="@drawable/ic_arrow_right"

                    app:tint="@color/gray_medium"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <!-- Grammar Practice -->

        <androidx.cardview.widget.CardView

            android:id="@+id/cardGrammarModule"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginBottom="12dp"

            app:cardCornerRadius="16dp"

            app:cardElevation="2dp"

            app:cardBackgroundColor="@color/white"

            android:clickable="true"

            android:foreground="?attr/selectableItemBackground">



            <LinearLayout

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:orientation="horizontal"

                android:padding="16dp"

                android:gravity="center_vertical">



                <androidx.cardview.widget.CardView

                    android:layout_width="56dp"

                    android:layout_height="56dp"

                    app:cardCornerRadius="12dp"

                    app:cardElevation="0dp"

                    app:cardBackgroundColor="#E3F2FD">



                    <ImageView

                        android:layout_width="32dp"

                        android:layout_height="32dp"

                        android:src="@drawable/ic_edit"

                        android:layout_gravity="center"

                        app:tint="@color/color_info_bg"/>

                </androidx.cardview.widget.CardView>



                <LinearLayout

                    android:layout_width="0dp"

                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:orientation="vertical"

                    android:layout_marginStart="16dp">



                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:text="Grammar Practice"

                        android:textSize="16sp"

                        android:textStyle="bold"

                        android:textColor="@color/text_primary"

                        android:fontFamily="sans-serif-medium"/>



                    <TextView

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"

                        android:text="10 lessons • 40 min"

                        android:textSize="12sp"

                        android:textColor="@color/gray_dark"

                        android:layout_marginTop="4dp"/>

                </LinearLayout>



                <ImageView

                    android:layout_width="24dp"

                    android:layout_height="24dp"

                    android:src="@drawable/ic_arrow_right"

                    app:tint="@color/gray_medium"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <!-- Practice Button -->

        <com.google.android.material.button.MaterialButton

            android:id="@+id/btnRetakeAssessment"

            android:layout_width="match_parent"

            android:layout_height="56dp"

            android:text="Retake Placement Test"

            android:textSize="16sp"

            android:textStyle="bold"

            app:cornerRadius="12dp"

            app:backgroundTint="@color/color_midnight_green"

            android:textColor="@color/white"

            android:layout_marginTop="12dp"

            android:fontFamily="sans-serif-medium"

            app:icon="@drawable/ic_refresh"

            app:iconGravity="textStart"/>



    </LinearLayout>

</ScrollView>