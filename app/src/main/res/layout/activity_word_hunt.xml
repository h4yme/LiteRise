<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Gradient Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_game"/>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Modern Header with Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:padding="8dp"
                app:tint="#333333"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Word Hunt"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:fontFamily="@font/poppins_bold"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!-- Score Display -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/rounded_bg_accent"
                android:padding="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star"
                    app:tint="#FFD700"/>

                <TextView
                    android:id="@+id/tvStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Progress Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Words Found: 0/8"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#7C3AED"
                    android:fontFamily="@font/poppins_semibold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ” Swipe across letters to find hidden words!"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Letter Grid with Modern Style -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardGrid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <GridLayout
                android:id="@+id/letterGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="12dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Word List with Gradient -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWordList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#7C3AED">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“š Find These Words"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_semibold"/>

                    <TextView
                        android:id="@+id/tvWordsRemaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 left"
                        android:textSize="12sp"
                        android:textColor="#E0E0E0"
                        android:fontFamily="@font/poppins"/>
                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/wordListContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexWrap="wrap"
                    app:alignItems="center"
                    app:justifyContent="flex_start"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Complete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnComplete"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Complete Word Hunt"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            app:cornerRadius="20dp"
            app:backgroundTint="#10B981"
            android:textColor="#FFFFFF"
            app:icon="@drawable/ic_check"
            app:iconGravity="textStart"
            app:iconTint="#FFFFFF"/>
    </LinearLayout>

    <!-- Hidden elements for backward compatibility -->
    <ProgressBar android:id="@+id/loadingProgress" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <View android:id="@+id/progressBar" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <View android:id="@+id/timerProgress" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <TextView android:id="@+id/tvTimer" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <TextView android:id="@+id/tvScore" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <View android:id="@+id/cardDefinition" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <TextView android:id="@+id/tvFoundWord" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <TextView android:id="@+id/tvDefinition" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <TextView android:id="@+id/tvExample" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <Button android:id="@+id/btnHint" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <Button android:id="@+id/btnShuffle" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
</FrameLayout>
