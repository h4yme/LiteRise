<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Gradient Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_game"/>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:tint="#333333"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"/>

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Word Hunt"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:fontFamily="@font/poppins_bold"/>
        </RelativeLayout>

        <!-- Instructions Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ” Instructions"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#7C3AED"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find all the hidden words in the letter grid! Swipe across letters to select words horizontally, vertically, or diagonally."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Progress Counter -->
        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Words Found: 0/8"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#7C3AED"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Letter Grid -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardGrid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <GridLayout
                android:id="@+id/letterGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="8dp"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Word List -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWordList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F3E8FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Words to Find"
                    android:textSize="14sp"
                    android:textColor="#7C3AED"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/wordListContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexWrap="wrap"
                    app:alignItems="center"
                    app:justifyContent="flex_start"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Complete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnComplete"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Complete Word Hunt"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold"
            app:cornerRadius="16dp"
            app:backgroundTint="#7C3AED"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- Hidden elements for backward compatibility -->
    <ProgressBar
        android:id="@+id/loadingProgress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <View
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <View
        android:id="@+id/timerProgress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <View
        android:id="@+id/cardDefinition"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvFoundWord"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvDefinition"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvExample"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnHint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnShuffle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>
</FrameLayout>
