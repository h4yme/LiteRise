<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="@drawable/gradient_purple">







    <!-- Celebrating Child Character -->



    <ImageView



        android:id="@+id/ivMascot"



        android:layout_width="240dp"



        android:layout_height="240dp"



        android:layout_marginTop="100dp"



        android:src="@drawable/mascot_excited"



        android:contentDescription="Happy child celebrating"



        android:scaleType="fitCenter"



        app:layout_constraintTop_toTopOf="parent"



        app:layout_constraintStart_toStartOf="parent"



        app:layout_constraintEnd_toEndOf="parent" />







    <!-- Success Title -->



    <TextView



        android:id="@+id/tvTitle"



        android:layout_width="0dp"



        android:layout_height="wrap_content"



        android:layout_marginTop="32dp"



        android:layout_marginStart="40dp"



        android:layout_marginEnd="40dp"



        android:text="You're All Set!"



        android:textSize="36sp"



        android:textStyle="bold"



        android:textColor="@color/white"



        android:fontFamily="@font/poppins_bold"



        android:gravity="center"



        app:layout_constraintTop_toBottomOf="@id/ivMascot"



        app:layout_constraintStart_toStartOf="parent"



        app:layout_constraintEnd_toEndOf="parent" />







    <!-- Success Message -->



    <TextView



        android:id="@+id/tvMessage"



        android:layout_width="0dp"



        android:layout_height="wrap_content"



        android:layout_marginTop="16dp"



        android:layout_marginStart="40dp"



        android:layout_marginEnd="40dp"



        android:text="Your account has been created!\nLet's start learning and having fun!"



        android:textSize="18sp"



        android:textColor="@color/white"



        android:fontFamily="@font/poppins_medium"



        android:gravity="center"



        android:lineSpacingExtra="4dp"



        app:layout_constraintTop_toBottomOf="@id/tvTitle"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>