<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/bg_dialog_rounded">

    <!-- Category Icon -->
    <TextView
        android:id="@+id/tvCategoryIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“š"
        android:textSize="64sp"
        android:layout_marginBottom="16dp" />

    <!-- Category Title -->
    <TextView
        android:id="@+id/tvCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/visby_bold"
        android:text="Great Job!"
        android:textColor="#2C3E50"
        android:textSize="24sp"
        android:layout_marginBottom="12dp" />

    <!-- Category Name -->
    <TextView
        android:id="@+id/tvCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/visby_bold"
        android:text="Category 2: Word Knowledge"
        android:textAlignment="center"
        android:textColor="#4ECDC4"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- Leo Message -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E8F5E9"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Leo Avatar -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/leo_happy"
                android:layout_marginEnd="12dp" />

            <!-- Message -->
            <TextView
                android:id="@+id/tvLeoMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/visby_medium"
                android:text="Now let's test your word knowledge! You're doing amazing! ðŸŒŸ"
                android:textColor="#2C3E50"
                android:textSize="14sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Continue Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:fontFamily="@font/visby_bold"
        android:text="Let's Go!"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:backgroundTint="#4ECDC4"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_arrow_right"
        app:iconGravity="end"
        app:iconTint="@color/white" />

</LinearLayout>