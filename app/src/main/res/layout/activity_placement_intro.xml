<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Background decoration -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/placement_intro_bg"
        android:scaleType="centerCrop"
        android:alpha="0.1" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Leo Character Large -->
        <ImageView
            android:id="@+id/ivLeoIntro"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/leo_happy"
            android:layout_marginBottom="24dp" />

        <!-- Welcome Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/visby_bold"
            android:text="Welcome!"
            android:textColor="#2C3E50"
            android:textSize="32sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/visby_medium"
            android:text="Let's find your perfect reading level"
            android:textAlignment="center"
            android:textColor="#7F8C8D"
            android:textSize="16sp"
            android:layout_marginBottom="32dp" />

        <!-- Start Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartPlacement"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:fontFamily="@font/visby_bold"
            android:text="Let's Start!"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:backgroundTint="#FF8C42"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_arrow_right"
            app:iconGravity="end"
            app:iconTint="@color/white" />

    </LinearLayout>

</RelativeLayout>