<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <!-- Slide Image -->
    <ImageView
        android:id="@+id/ivSlideImage"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="Onboarding illustration"
        android:scaleType="fitCenter"
        android:src="@drawable/onboarding_slide_1" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvSlideTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/visby_bold"
        android:gravity="center"
        android:text="Discover Stories from Islamic History"
        android:textColor="#2D3436"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/tvSlideDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/visby_regular"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="Listen to beautiful audio stories of Prophets and heroes of Islam â€“ made just for kids!"
        android:textColor="#636E72"
        android:textSize="15sp" />

</LinearLayout>
