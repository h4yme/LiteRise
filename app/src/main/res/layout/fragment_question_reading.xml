<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Reading Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#4ECDC4"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- Reading Text Container -->
            <TextView
                android:id="@+id/tvReadingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_medium"
                android:lineSpacingExtra="6dp"
                android:text="The cat sat on the mat. It was a sunny day."
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Control Panel -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="1.5dp"
        app:strokeColor="#E0E0E0"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Status Text -->
            <TextView
                android:id="@+id/tvReadingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/visby_bold"
                android:text="Tap play to start reading!"
                android:textColor="#7F8C8D"
                android:textSize="13sp"
                android:layout_marginBottom="12dp" />

            <!-- Control Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <!-- Play/Pause Button -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_play"
                    app:backgroundTint="#4ECDC4"
                    app:elevation="4dp"
                    app:fabSize="mini"
                    app:tint="@color/white"
                    android:layout_marginEnd="10dp" />

                <!-- Stop/Reset Button -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnStop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_stop"
                    app:backgroundTint="@color/warning_orange"
                    app:elevation="4dp"
                    app:fabSize="mini"
                    app:tint="@color/white" />

            </LinearLayout>

            <!-- Reading Speed Slider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¢"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <SeekBar
                    android:id="@+id/seekBarSpeed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="2"
                    android:progress="1"
                    android:progressTint="#4ECDC4"
                    android:thumbTint="#4ECDC4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ°"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Comprehension Question (shown after reading) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/comprehensionCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFD93D"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Comprehension Question -->
            <TextView
                android:id="@+id/tvComprehensionQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_bold"
                android:text="What did the cat sit on?"
                android:textAlignment="center"
                android:textColor="#2C3E50"
                android:textSize="15sp"
                android:layout_marginBottom="12dp" />

            <!-- Answer Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAnswer1"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/visby_bold"
                    android:text="A mat"
                    android:textAllCaps="false"
                    android:textColor="#2C3E50"
                    android:textSize="14sp"
                    app:strokeColor="#2C3E50"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAnswer2"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/visby_bold"
                    android:text="A chair"
                    android:textAllCaps="false"
                    android:textColor="#2C3E50"
                    android:textSize="14sp"
                    app:strokeColor="#2C3E50"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAnswer3"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/visby_bold"
                    android:text="A table"
                    android:textAllCaps="false"
                    android:textColor="#2C3E50"
                    android:textSize="14sp"
                    app:strokeColor="#2C3E50"
                    app:cornerRadius="12dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
