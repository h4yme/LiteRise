<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".activities.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingBottom="16dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_revert"
                android:contentDescription="Back"
                app:tint="#6C5CE7"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Progress Indicator -->
            <LinearLayout
                android:id="@+id/stepIndicatorContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <!-- Step 1 -->
                <View
                    android:id="@+id/step1Indicator"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:background="#6C5CE7"
                    android:layout_marginEnd="4dp" />

                <!-- Step 2 -->
                <View
                    android:id="@+id/step2Indicator"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0"
                    android:layout_marginEnd="4dp" />

                <!-- Step 3 -->
                <View
                    android:id="@+id/step3Indicator"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0"
                    android:layout_marginEnd="4dp" />

                <!-- Step 4 -->
                <View
                    android:id="@+id/step4Indicator"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0" />

            </LinearLayout>

            <!-- Step Title -->
            <TextView
                android:id="@+id/tvStepTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About You"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2D3436"
                android:fontFamily="@font/visby_bold"
                android:layout_marginBottom="8dp" />

            <!-- Step Subtitle -->
            <TextView
                android:id="@+id/tvStepSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tell us about yourself"
                android:textSize="15sp"
                android:textColor="#636E72"
                android:fontFamily="@font/visby_regular" />

        </LinearLayout>

        <!-- ViewPager for Steps -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" />

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24dp"
            android:gravity="center">

            <!-- Previous Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrevious"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Previous"
                android:textAllCaps="false"
                android:textColor="#6C5CE7"
                android:textSize="16sp"
                android:fontFamily="@font/visby_bold"
                app:strokeColor="#6C5CE7"
                app:strokeWidth="2dp"
                app:cornerRadius="16dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone" />

            <!-- Next Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/visby_bold"
                app:backgroundTint="#6C5CE7"
                app:cornerRadius="16dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
