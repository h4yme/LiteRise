<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Modern Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Lock Icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”"
                android:textSize="64sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <!-- Email Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Address *"
                android:textSize="14sp"
                android:textColor="#2D3436"
                android:fontFamily="@font/visby_medium"
                android:layout_marginBottom="8dp" />

            <!-- Email Input -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input_modern"
                android:hint="yourname@example.com"
                android:textColorHint="#B2BEC3"
                android:textColor="#2D3436"
                android:textSize="15sp"
                android:fontFamily="@font/visby_regular"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginBottom="20dp" />

            <!-- Password Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password *"
                android:textSize="14sp"
                android:textColor="#2D3436"
                android:fontFamily="@font/visby_medium"
                android:layout_marginBottom="8dp" />

            <!-- Password Input -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input_modern"
                android:hint="Minimum 6 characters"
                android:textColorHint="#B2BEC3"
                android:textColor="#2D3436"
                android:textSize="15sp"
                android:fontFamily="@font/visby_regular"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginBottom="20dp" />

            <!-- Confirm Password Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Password *"
                android:textSize="14sp"
                android:textColor="#2D3436"
                android:fontFamily="@font/visby_medium"
                android:layout_marginBottom="8dp" />

            <!-- Confirm Password Input -->
            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_input_modern"
                android:hint="Re-enter your password"
                android:textColorHint="#B2BEC3"
                android:textColor="#2D3436"
                android:textSize="15sp"
                android:fontFamily="@font/visby_regular"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginBottom="20dp" />

            <!-- Parent Permission Checkbox -->
            <CheckBox
                android:id="@+id/cbParentPermission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My parent allows me to use this app"
                android:textSize="14sp"
                android:textColor="#636E72"
                android:fontFamily="@font/visby_regular"
                android:buttonTint="#6C5CE7" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
