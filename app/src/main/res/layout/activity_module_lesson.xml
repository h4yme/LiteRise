<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_light">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/text_primary"
            android:contentDescription="Back"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvLessonTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tvLessonDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson description"
                android:textSize="13sp"
                android:textColor="@color/gray_dark"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvXpReward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+20 XP"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/color_jade1"/>

            <TextView
                android:id="@+id/tvTier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foundation"
                android:textSize="11sp"
                android:textColor="@color/gray_dark"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Progress Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            android:progress="0"
            android:max="100"
            android:progressTint="@color/color_jade1"/>

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginStart="12dp"
            android:textColor="@color/text_primary"/>
    </LinearLayout>

    <!-- Tab Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@android:color/white"
        android:elevation="2dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/tabContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTabContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Content"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_dark"/>

                <View
                    android:id="@+id/indicatorContent"
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/purple_600"
                    android:visibility="invisible"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tabPractice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTabPractice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Practice"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_dark"/>

                <View
                    android:id="@+id/indicatorPractice"
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/purple_600"
                    android:visibility="invisible"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tabQuiz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTabQuiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_dark"/>

                <View
                    android:id="@+id/indicatorQuiz"
                    android:layout_width="24dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/purple_600"
                    android:visibility="invisible"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Content Sections (in FrameLayout to overlay them) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Content Section -->
        <ScrollView
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLessonContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lesson content will appear here..."
                    android:textSize="15sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStartPractice"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Start Practice"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="32dp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/color_jade1"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </ScrollView>

        <!-- Practice Section -->
        <ScrollView
            android:id="@+id/scrollPractice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Practice Questions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:id="@+id/practiceContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCheckPractice"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Check Answers"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/purple_600"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </ScrollView>

        <!-- Quiz Section -->
        <ScrollView
            android:id="@+id/scrollQuiz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quiz - Pass with 70%"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer all questions correctly to earn XP and unlock the next lesson!"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:id="@+id/quizContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubmitQuiz"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Submit Quiz"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/color_jade1"
                    android:textColor="@android:color/white"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRetry"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Retry Quiz"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/color_warning"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>
