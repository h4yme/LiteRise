<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Gradient Background (same as dashboard) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dashboard_gradient"/>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                app:tint="#3B82F6"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"/>

            <!-- Settings Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2D3436"
                android:fontFamily="@font/poppins_bold"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <!-- Settings Cards Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Voice Speed Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#AAFFF5F0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voice Speed"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2D3436"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginBottom="12dp"/>

                    <!-- Voice Speed Selector -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_rounded_white"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/btnVoiceNormal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Normal"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:background="@drawable/bg_voice_speed_selected"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:id="@+id/btnVoiceSlow"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Slow"
                            android:textSize="14sp"
                            android:textColor="#636E72"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sounds Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#AAFFF5F0">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sounds"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2D3436"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_centerVertical="true"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSounds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:checked="true"
                        app:thumbTint="#FFFFFF"
                        app:trackTint="#00C853"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Download Lessons Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#AAFFF5F0">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download Lessons"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2D3436"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_centerVertical="true"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchDownload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:checked="false"
                        app:thumbTint="#FFFFFF"
                        app:trackTint="#BDBDBD"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- About App Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAboutApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#AAFFF5F0"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About App"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2D3436"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="20dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Log Out Button -->
        <TextView
            android:id="@+id/btnLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textSize="16sp"
            android:textColor="#2D3436"
            android:fontFamily="@font/poppins"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"/>
    </LinearLayout>
</FrameLayout>
