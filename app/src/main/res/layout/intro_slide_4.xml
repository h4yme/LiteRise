<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="#FFF0F5">



    <!-- Mascot Image -->

    <ImageView

        android:id="@+id/ivMascot"

        android:layout_width="280dp"

        android:layout_height="280dp"

        android:layout_marginTop="120dp"

        android:src="@drawable/mascot_pointing"

        android:contentDescription="Mascot showing progress"

        android:scaleType="fitCenter"

        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="parent" />



    <!-- Title -->

    <TextView

        android:id="@+id/tvTitle"

        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:layout_marginTop="32dp"

        android:layout_marginStart="40dp"

        android:layout_marginEnd="40dp"

        android:text="Track Your Progress"

        android:textSize="32sp"

        android:textStyle="bold"

        android:textColor="#E75480"

        android:fontFamily="@font/poppins_bold"

        android:gravity="center"

        app:layout_constraintTop_toBottomOf="@id/ivMascot"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="parent" />



    <!-- Description -->

    <TextView

        android:id="@+id/tvDescription"

        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"

        android:layout_marginStart="40dp"

        android:layout_marginEnd="40dp"

        android:text="Watch yourself grow and celebrate your achievements"

        android:textSize="16sp"

        android:textColor="#6B7280"

        android:fontFamily="@font/poppins_regular"

        android:gravity="center"

        android:lineSpacingExtra="4dp"

        app:layout_constraintTop_toBottomOf="@id/tvTitle"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>