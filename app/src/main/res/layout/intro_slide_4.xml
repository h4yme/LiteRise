<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="@drawable/gradient_welcome">



    <!-- Title at Top -->

    <TextView

        android:id="@+id/tvTitle"

        android:layout_width="0dp"

        android:layout_height="wrap_content"

        android:layout_marginTop="60dp"

        android:layout_marginStart="40dp"

        android:layout_marginEnd="40dp"

        android:text="Make learning exciting and easy with Literiser!"

        android:textSize="38sp"

        android:textStyle="bold"

        android:textColor="@color/white"

        android:fontFamily="@font/poppins_bold"

        android:gravity="center"

        android:lineSpacingExtra="6dp"

        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="parent" />



    <!-- Large Mascot Image -->

    <ImageView

        android:id="@+id/ivMascot"

        android:layout_width="0dp"

        android:layout_height="0dp"

        android:layout_marginStart="40dp"

        android:layout_marginEnd="40dp"

        android:layout_marginTop="40dp"

        android:layout_marginBottom="60dp"

        android:src="@drawable/mascot_thinking"

        android:contentDescription="Literiser mascot thinking"

        android:scaleType="fitCenter"

        app:layout_constraintTop_toBottomOf="@id/tvTitle"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>