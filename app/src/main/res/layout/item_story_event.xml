<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardStoryEvent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="18dp"
        android:gravity="center_vertical">

        <!-- Drag Handle with background -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp">

            <View
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_drag_handle_circle"
                android:alpha="0.1"/>

            <ImageView
                android:id="@+id/ivDragHandle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_drag_handle"
                app:tint="#7C3AED"
                android:contentDescription="Drag to reorder"/>
        </FrameLayout>

        <!-- Event Number Badge with gradient -->
        <TextView
            android:id="@+id/tvEventNumber"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_event_number_gradient"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:elevation="2dp"
            android:layout_marginEnd="16dp"/>

        <!-- Event Text -->
        <TextView
            android:id="@+id/tvEventText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A little girl named Emma found a puppy in the park."
            android:textSize="15sp"
            android:textColor="#2D3748"
            android:fontFamily="@font/poppins"
            android:lineSpacingExtra="6dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
