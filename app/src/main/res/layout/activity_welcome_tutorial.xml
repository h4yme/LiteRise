<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout">

    <!-- Tutorial Background Image -->
    <ImageView
        android:id="@+id/ivTutorialScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/tutorial_slide_1"
        android:scaleType="centerCrop"
        android:contentDescription="Tutorial screen" />

    <!-- Tutorial Content Overlay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp">

        <!-- Leo Character -->
        <ImageView
            android:id="@+id/ivLeoCharacter"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/leo_welcome_1"
            android:contentDescription="Leo the Lion"
            android:layout_marginBottom="40dp" />

        <!-- Tutorial Title -->
        <TextView
            android:id="@+id/tvTutorialTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to LiteRise!"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/visby_bold"
            android:gravity="center"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="8"
            android:layout_marginBottom="16dp" />

        <!-- Tutorial Description -->
        <TextView
            android:id="@+id/tvTutorialDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm Leo, your reading buddy!\nI'll help you learn to read in a fun way!"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/visby_regular"
            android:gravity="center"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Skip Button (Top Right) -->
    <TextView
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/visby_medium"
        android:clickable="true"
        android:focusable="true"
        android:padding="20dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <!-- Tap to Continue Text (Bottom Center) -->
    <TextView
        android:id="@+id/tvTapToContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to continue"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:alpha="0.8"
        android:fontFamily="@font/visby_regular"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="40dp" />

</FrameLayout>
