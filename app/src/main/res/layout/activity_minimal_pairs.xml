<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".activities.games.MinimalPairsActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/primary_blue">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pronunciation Practice"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 / 10"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_timer"
            android:padding="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />
    </LinearLayout>

    <!-- Stats Row -->
    <LinearLayout
        android:id="@+id/stats_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/bg_gradient_blue">

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_star"
            android:drawablePadding="8dp"
            android:layout_marginEnd="32dp" />

        <TextView
            android:id="@+id/tv_streak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Streak: 0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_fire"
            android:drawablePadding="8dp" />
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stats_row"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Instruction Text -->
            <TextView
                android:id="@+id/tv_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap 'Listen' to hear the word"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Word Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_target_word"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SHIP"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_blue"
                        android:layout_marginBottom="16dp" />

                    <!-- Listen Icon Animation -->
                    <ImageView
                        android:id="@+id/iv_listen_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_mic"
                        android:visibility="gone"
                        app:tint="@color/color_success"
                        android:contentDescription="Listening" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_listen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Listen"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    app:icon="@drawable/ic_volume_up"
                    app:iconGravity="textStart"
                    app:cornerRadius="16dp"
                    android:backgroundTint="@color/purple_600"
                    android:layout_marginEnd="16dp"
                    style="@style/Widget.MaterialComponents.Button" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_speak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speak"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"
                    app:icon="@drawable/ic_mic"
                    app:iconGravity="textStart"
                    app:cornerRadius="16dp"
                    android:backgroundTint="@color/color_success"
                    style="@style/Widget.MaterialComponents.Button" />
            </LinearLayout>

            <!-- Feedback Text -->
            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perfect! You said it correctly!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_success"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/bg_feedback"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />

            <!-- Mouth Shape Guide -->
            <ImageView
                android:id="@+id/iv_mouth_shape"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_mouth_o"
                android:contentDescription="Mouth shape guide"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />

            <!-- Help and Next Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_show_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Need Help?"
                    android:textSize="16sp"
                    app:icon="@drawable/ic_help"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    android:backgroundTint="@color/text_secondary"
                    android:layout_marginEnd="16dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Word"
                    android:textSize="16sp"
                    app:icon="@drawable/ic_arrow_forward"
                    app:iconGravity="end"
                    app:cornerRadius="12dp"
                    android:backgroundTint="@color/primary_blue"
                    android:visibility="gone"
                    style="@style/Widget.MaterialComponents.Button" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>